<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Default" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="#212121" />
        <Setter Property="Margin" Value="10,5" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="BorderBrush" Value="{StaticResource disabledGray}" />
                <Setter Property="Foreground" Value="{StaticResource disabledGray}" />
            </Trigger>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="BorderBrush" Value="{StaticResource materialPrimaryVar}" />
            </Trigger>
            <Trigger Property="IsFocused" Value="true">
                <Setter Property="BorderBrush" Value="{StaticResource materialSecondary}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Don't touch  -->
    <Style BasedOn="{StaticResource Default}" TargetType="PasswordBox" />


    <Style
        x:Key="PasswordBox"
        BasedOn="{StaticResource Default}"
        TargetType="PasswordBox">
        <Setter Property="Margin" Value="10,5" />
        <Setter Property="Background" Value="{StaticResource materialSurface}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}" CornerRadius="8">
                        <Grid Margin="8">
                            <!--<PasswordBox
                                x:Name="pwdbox"
                                Margin="8,0,0,0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="#212121"
                                Foreground="#212121"
                                MaxLength="20" />-->

                            <ScrollViewer Margin="10,0"
                                x:Name="PART_ContentHost"
                                Focusable="false"
                                HorizontalScrollBarVisibility="Hidden"
                                VerticalScrollBarVisibility="Hidden" />

                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>