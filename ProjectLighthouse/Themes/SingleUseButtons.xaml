    <!--#region Notifications-->

    <Style x:Key="NotificationsMainButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="{StaticResource Red}" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border
                        x:Name="border"
                        Height="35"
                        Padding="20,0"
                        Background="{TemplateBinding Background}"
                        BorderThickness="0">
                        <ContentPresenter
                            Margin="0,0,0,2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource RedLight}" />
                <Setter Property="Cursor" Value="Hand" />

            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="LightGray" />
                <Setter Property="Foreground" Value="Gray" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource RedDark}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Notifications_Mini_Tooltip" TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Placement" Value="Right" />
        <Setter Property="HorizontalOffset" Value="20" />
        <Setter Property="VerticalOffset" Value="0" />
        <Setter Property="PlacementRectangle" Value="20,0,0,0" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="StaysOpen" Value="True" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border
                        Height="35"
                        Background="Black"
                        CornerRadius="5">
                        <TextBlock
                            Margin="10,0,10,2"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="{TemplateBinding Tag}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Clean_ToolTip_Left" TargetType="{x:Type ToolTip}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Placement" Value="Left" />
