<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Default" TargetType="ProgressBar">
        <Setter Property="Maximum" Value="1" />
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Background" Value="{StaticResource disabledGray}" />
        <Setter Property="Foreground">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientBrush.GradientStops>
                        <GradientStopCollection>
                            <GradientStop Offset="0.0" Color="#6200EE" />
                            <GradientStop Offset="1.0" Color="#3700B3" />
                        </GradientStopCollection>
                    </GradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Border
                            x:Name="PART_Track"
                            BorderBrush="{TemplateBinding Background}"
                            BorderThickness="2" />
                        <Border
                            x:Name="PART_Indicator"
                            HorizontalAlignment="Left"
                            Background="{TemplateBinding Foreground}"
                            CornerRadius="2" />
                        <!--<TextBlock Text="{Binding Value, StringFormat='{}{0:0}%'}" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
                    </Grid>
                    <!--<ControlTemplate.Triggers>
                        <Trigger Property="Value" Value="1">
                            <Setter TargetName="PART_Indicator" Property="Background" Value="{StaticResource materialPrimaryGreen}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource Default}" TargetType="ProgressBar" />
</ResourceDictionary>