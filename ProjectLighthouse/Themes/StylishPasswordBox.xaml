<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Default" TargetType="PasswordBox">
        <Setter Property="Foreground" Value="#212121" />
        <Setter Property="Background" Value="{StaticResource materialSurface}" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <!--  Don't touch  -->
    <Style BasedOn="{StaticResource Default}" TargetType="PasswordBox" />

    <Style
        x:Key="PasswordBox"
        BasedOn="{StaticResource Default}"
        TargetType="PasswordBox">
        <Setter Property="Tag" Value="password" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="BorderBrush" Value="#f0f0f0" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Grid>
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8" />


                        <ScrollViewer
                            x:Name="PART_ContentHost"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            Focusable="false"
                            HorizontalScrollBarVisibility="Hidden"
                            VerticalScrollBarVisibility="Hidden" />

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>