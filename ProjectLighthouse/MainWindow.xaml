<Window x:Class="ProjectLighthouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse"
        xmlns:vm="clr-namespace:ProjectLighthouse.ViewModel"
        mc:Ignorable="d"
        Title="Project Lighthouse" Height="650" Width="1100"
        MinHeight="650"
        MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        BorderThickness="3"
        AllowsTransparency="True"
        Background="#12000000"
		Loaded="Window_Loaded">

    <Window.Resources>

        <ResourceDictionary>
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="{StaticResource ProximaNova}" />
                <Setter Property="FontSize" Value="13" />
            </Style>

            <vm:MainViewModel x:Key="vm"/>
            <Style x:Key="menuButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="16"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="10,0,0,6">
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="White"/>
                    </Trigger>
                </Style.Triggers>

            </Style>
            <Style x:Key="menuSepStyle" TargetType="Separator">
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Width" Value="175"/>
            </Style>
            <Style x:Key="menuSectionStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel DataContext="{StaticResource vm}">
        <Grid DockPanel.Dock="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.RowSpan="4" Opacity="0.7" Fill="Black"/>
            <Image Source="/Resources/LighthouseLogo.png"
                   Width="150"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <StackPanel Width="200" Grid.Row="1" Margin="10,0">
                <Rectangle Fill="Transparent"
                           Height="25"/>

                <TextBlock Text="Requests"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="NewRequest"
                        Style="{StaticResource menuButtonStyle}"
                        Content="New Request"/>
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Requests"
                        Style="{StaticResource menuButtonStyle}"
                        Content="View Requests"/>


                <TextBlock Text="Production"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <Button Command="{Binding UpdateViewCommand}"
                        CommandParameter="Orders"
                        Style="{StaticResource menuButtonStyle}"
                        Content="Orders"/>
                
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Schedule"
                        Style="{StaticResource menuButtonStyle}"
                        Content="Schedule"/>
                
                <!--<Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="BarStock"
                        Style="{StaticResource menuButtonStyle}"
                        Content="Bar Stock"/>
                
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Performance"
                        Style="{StaticResource menuButtonStyle}"
                        Content="Performance Monitoring"/>

                <TextBlock Text="Products"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Products"
                        Style="{StaticResource menuButtonStyle}"
                        Content="View Database"/>-->

                <!--<TextBlock Text="Users"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="Products"
                        Style="{StaticResource menuButtonStyle}">
                    <TextBlock Text="View Database"
                               Style="{StaticResource menuButtonTextStyle}"/>
                </Button>-->

            </StackPanel>

            <Button Content="Exit"
                    HorizontalAlignment="Center"
                    Grid.Row="3"
                    Width="120"
                    x:Name="exitButton"
                    Click="exitButton_Click"
                    Style="{StaticResource ExitButton}"
                    Margin="20"/>
        </Grid>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding NavText}"
                       FontSize="35"
                       Margin="0,0,50,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       x:Name="WindowText"/>
            <Rectangle x:Name="dragArea"
                       MouseDown="dragArea_MouseDown"
                       Fill="Transparent"
                       Height="30"
                       Grid.Row="0"/>
            <ContentControl Content="{Binding SelectedViewModel}"
                            Grid.Row="1"
                            BorderBrush="DodgerBlue"
                            BorderThickness="2"/>
        </Grid>
    </DockPanel>
</Window>
