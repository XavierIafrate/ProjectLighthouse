<Window x:Class="ProjectLighthouse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse"
        xmlns:vm="clr-namespace:ProjectLighthouse.ViewModel"
        mc:Ignorable="d"
        Title="Project Lighthouse" Height="650" Width="1100"
        MinHeight="650"
        MinWidth="1100"
        MaxWidth="2000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Loaded="Window_Loaded"
        Background="{StaticResource materialBackground}">

    <Window.Resources>

        <ResourceDictionary>
            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="{StaticResource ProximaNova}" />
                <Setter Property="FontSize" Value="13" />
            </Style>

            <vm:MainViewModel x:Key="vm"/>

            <Style x:Key="menuButtonStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Foreground" Value="{StaticResource materialOnPrimary}"/>
                <Setter Property="FontSize" Value="16"/>

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="10,2,0,4">
                                <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Foreground" Value="{StaticResource materialOnPrimary}"/>
                        <Setter Property="Background" Value="{StaticResource materialPrimary}"/>
                    </Trigger>
                    <Trigger Property="IsChecked" Value="True">
                        <Setter Property="Foreground" Value="{StaticResource materialOnPrimary}"/>
                        <Setter Property="Background" Value="{StaticResource materialPrimaryVar}"/>
                    </Trigger>
                </Style.Triggers>

            </Style>
            <Style x:Key="menuSepStyle" TargetType="Separator">
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Width" Value="175"/>
            </Style>
            <Style x:Key="menuSectionStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="25"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid DataContext="{StaticResource vm}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="350" MinWidth="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="main_menu">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Rectangle Grid.RowSpan="4" Fill="{StaticResource materialOnBackground}"/>
            <Viewbox Margin="40">
                <Image Source="/Resources/LighthouseLogo.png"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Viewbox>
            <StackPanel Grid.Row="1" Margin="20,0">

                <TextBlock Text="Requests"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <ToggleButton Command="{Binding UpdateViewCommand}" 
                              CommandParameter="NewRequest"
                              Style="{StaticResource menuButtonStyle}"
                              Content="New Request"
                              x:Name="new_request_button"
                              Click="ToggleButton_Click"/>
                <ToggleButton Command="{Binding UpdateViewCommand}" 
                              CommandParameter="Requests"
                              Style="{StaticResource menuButtonStyle}"
                              Content="View Requests"
                              x:Name="requests_button"
                              Click="ToggleButton_Click"/>


                <TextBlock Text="Production"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <ToggleButton Command="{Binding UpdateViewCommand}"
                              CommandParameter="Orders"
                              Style="{StaticResource menuButtonStyle}"
                              Content="Orders"
                              x:Name="orders_button"
                              Click="ToggleButton_Click"
                              IsChecked="True"/>

                <ToggleButton Command="{Binding UpdateViewCommand}" 
                              CommandParameter="Schedule"
                              Style="{StaticResource menuButtonStyle}"
                              Content="Schedule"
                              x:Name="schedule_button"
                              Click="ToggleButton_Click"/>
                <ToggleButton Command="{Binding UpdateViewCommand}" 
                              CommandParameter="Machine Stats"
                              Style="{StaticResource menuButtonStyle}"
                              Content="Runtime"
                              x:Name="machine_stats_button"
                              Click="ToggleButton_Click"/>
                <ToggleButton Command="{Binding UpdateViewCommand}" 
                              CommandParameter="Deliveries"
                              Style="{StaticResource menuButtonStyle}"
                              Content="Deliveries"
                              Click="ToggleButton_Click"/>

                <!--<TextBlock Text="Tools"
                           Style="{StaticResource menuSectionStyle}"/>
                <Separator Style="{StaticResource menuSepStyle}"/>
                <ToggleButton Style="{StaticResource menuButtonStyle}"
                              Content="Time/Cost Estimate"
                              x:Name="time_estimate_button"
                              Click="ToggleButton_Click"
                              IsEnabled="False"/>-->
                
                <Button Style="{StaticResource ButtonTemplate}"
                        Content="DEBUG"
                        x:Name="debugButton"
                        Click="Button_Click"/>

                <!--<Button Command="{Binding UpdateViewCommand}" 
                        CommandParameter="BarStock"
                        Style="{StaticResource menuButtonStyle}"
                        Content="Bar Stock"/>-->

            </StackPanel>
            <Button Style="{StaticResource ButtonTemplate}"
                    Content="Settings"
                    Grid.Row="3"
                    Width="100"
                    Margin="20"
                    Command="{Binding EditCommand}"/>
        </Grid>

        <GridSplitter Grid.Column="1"
                  Width="3" Background="White"
                  VerticalAlignment="Stretch" 
                  HorizontalAlignment="Center" />
        
        <Grid Background="White" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Viewbox Margin="50,20" HorizontalAlignment="Right" MaxHeight="70">
                <TextBlock Text="{Binding NavText}"
                            Foreground="{StaticResource materialOnBackground}"
                            
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            x:Name="WindowText"/>
            </Viewbox>
            <ContentControl Content="{Binding SelectedViewModel}"
                            Grid.Row="1"/>
        </Grid>
    </Grid>
</Window>
