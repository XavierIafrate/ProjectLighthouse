<Window
    x:Class="ProjectLighthouse.View.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Lighthouse Login"
    Width="1114"
    Height="650"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>

        <Border Name="ReceiverColor" Grid.RowSpan="2">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Direction="220"
                    Opacity="0.3"
                    ShadowDepth="20"
                    Color="Black" />
            </Border.Effect>
            <Grid Margin="30">
                <Border CornerRadius="50">
                    <Grid ClipToBounds="True">
                        <Border
                            Name="Mask"
                            Background="Black"
                            CornerRadius="30" />
                        <Image
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="Fant"
                            Source="../../Resources/Lighthouse_Splash_Screen.png"
                            Stretch="UniformToFill">
                            <Image.OpacityMask>
                                <VisualBrush Stretch="Uniform" Visual="{Binding ElementName=Mask}" />
                            </Image.OpacityMask>
                        </Image>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        <Button
            Margin="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="ExitButton_Click"
            Style="{StaticResource ExitButton}" />

        <Border
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{StaticResource Red}"
            CornerRadius="10">
            <StackPanel Margin="10">
                <TextBlock
                    x:Name="dbPath"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource OnRed}"
                    Text="DB_PATH" />
                <TextBox
                    x:Name="dbFileName"
                    Width="200"
                    HorizontalAlignment="Left" />
                <Button
                    HorizontalAlignment="Left"
                    Click="Button_Click"
                    Content="Change db" />
            </StackPanel>
        </Border>

        <Border
            Margin="50"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Background="#33000000"
            CornerRadius="5">

            <TextBlock
                x:Name="VersionText"
                Margin="10,3"
                FontSize="10"
                Foreground="White"
                Opacity="0.6"
                Text="v.0.0.0" />
        </Border>

        <Grid
            Margin="100,80"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBox
                    x:Name="UsernameTextBox"
                    Width="200"
                    Focusable="True"
                    KeyDown="PasswordText_KeyDown"
                    MaxLength="16"
                    Style="{StaticResource LoginTextBox}"
                    Tag="username" />

                <Grid>
                    <PasswordBox
                        x:Name="PasswordBox"
                        Width="230"
                        Focusable="True"
                        KeyDown="PasswordText_KeyDown"
                        MaxLength="16"
                        PasswordChanged="PasswordTextBox_PasswordChanged"
                        Style="{StaticResource LoginPasswordBox}"
                        Tag="password" />
                    <Grid>
                        <TextBlock
                            x:Name="PasswordGhost"
                            Margin="21,10"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Foreground="{StaticResource Background}"
                            IsHitTestVisible="False"
                            Opacity="0.6"
                            Text="password"
                            TextWrapping="Wrap"
                            Visibility="Visible" />
                    </Grid>
                </Grid>

                <Button Click="LoginButton_Click" Style="{StaticResource LoginButton}" />
            </StackPanel>
            <Border
                x:Name="MessageBadge"
                Grid.Row="1"
                HorizontalAlignment="Center"
                BorderBrush="{StaticResource Red}"
                BorderThickness="4,0,0,0"
                CornerRadius="3">
                <Grid>
                    <Border
                        Background="{StaticResource Red}"
                        CornerRadius="3"
                        Opacity="0.25" />
                    <TextBlock
                        x:Name="message"
                        Padding="15,2,15,4"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Red}"
                        Text="ERROR_MESSAGE_CONTAINER" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
