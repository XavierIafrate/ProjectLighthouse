<Window
    x:Class="ProjectLighthouse.View.Core.SetupFailedWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Core"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SetupFailedWindow"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Image Source="/Resources/StartPoint.png" Stretch="UniformToFill" />
        <Grid
            Width="425"
            Margin="50,50,0,50"
            HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                FontSize="50"
                FontWeight="SemiBold"
                Foreground="{StaticResource Background}"
                Text="Initialise Failed" />
            <TextBlock
                x:Name="ErrorMessage"
                Grid.Row="1"
                FontSize="22"
                FontWeight="SemiBold"
                Foreground="{StaticResource Background}"
                Text="SETUP_ERROR_MESSAGE"
                TextWrapping="Wrap" />
            <TextBlock
                x:Name="SubErrorMessage"
                Grid.Row="2"
                Margin="0,5"
                FontFamily="Consolas"
                FontSize="12"
                Foreground="{StaticResource Background}"
                Opacity="0.8"
                Text="SETUP_ERROR_SUB_MESSAGE"
                TextWrapping="Wrap" />
            <Border
                Grid.Row="4"
                Width="350"
                Margin="5"
                HorizontalAlignment="Center"
                Background="{StaticResource OnBackground}"
                CornerRadius="5"
                Opacity="0.5" />
            <TextBlock
                Grid.Row="4"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="14"
                FontStyle="Italic"
                Foreground="{StaticResource Background}"
                Text="If the error persists, please contact an administrator." />
            <Button
                x:Name="CloseButton"
                Grid.Row="5"
                Click="CloseButton_Click"
                Content="Close Application"
                Style="{StaticResource Action_Cancel_Button}" />
        </Grid>


    </Grid>
</Window>
