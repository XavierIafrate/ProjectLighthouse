<Window x:Class="ProjectLighthouse.View.Research.NewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View.Research"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height"
        Title="New Project" Width="480">
    <Grid Margin="30,20">
        <StackPanel>
            <TextBlock Text="Create New Project" Style="{StaticResource title}"/>
            <TextBox x:Name="projectNameTextBox" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=NewProject.ProjectName}" Tag="Project Name" Style="{StaticResource DefaultTextBox}" Margin="10,20"/>
            <Button x:Name="SubmitButton" Style="{StaticResource Action_New_Button}" Click="SubmitButton_Click" Tag="Create" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
