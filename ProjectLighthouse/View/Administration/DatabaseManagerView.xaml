<UserControl
    x:Class="ProjectLighthouse.View.Administration.DatabaseManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View.Administration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5">
        <TabControl>
            <TabItem Header="Users" IsEnabled="{Binding ManageUsersViewModel, Converter={StaticResource NotNullToBoolean}}">
                <ContentControl Content="{Binding ManageUsersViewModel}"/>
            </TabItem>
            <TabItem Header="Lathes">
                <ContentControl Content="{Binding LatheViewModel}" IsEnabled="{Binding LatheViewModel, Converter={StaticResource NotNullToBoolean}}"/>
            </TabItem>
            <TabItem Header="Materials">
                <ContentControl Content="{Binding MaterialsViewModel}" IsEnabled="{Binding MaterialsViewModel, Converter={StaticResource NotNullToBoolean}}"/>
            </TabItem>
            <TabItem Header="Dev" IsEnabled="False"/>
            <TabItem Header="Reports">
                <Grid>
                    <StackPanel>
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="Orders"
                            Style="{StaticResource Action_Button}"
                            Tag="Get CSV of orders" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="WorkloadOrders"
                            Style="{StaticResource Action_Button}"
                            Tag="Get Workload Data" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="ItemCosting"
                            Style="{StaticResource Action_Button}"
                            Tag="Get Item Costing" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="ProductImport"
                            Style="{StaticResource Action_Button}"
                            Tag="Get Item Import Sheet" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="Wizard"
                            Style="{StaticResource Action_Button}"
                            Tag="Import Wizard" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="BarStockEstimate"
                            Style="{StaticResource Action_Button}"
                            Tag="Estimate Bar Stock Inventory" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
