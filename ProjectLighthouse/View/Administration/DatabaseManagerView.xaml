<UserControl
    x:Class="ProjectLighthouse.View.Administration.DatabaseManagerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Administration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="5">
        <TabControl>
            <TabItem Header="Users" IsEnabled="{Binding ManageUsersViewModel, Converter={StaticResource ObjectIsNotNull}}" x:Name="usersTab">
                <ContentControl Content="{Binding ManageUsersViewModel}" />
            </TabItem>
            <TabItem Header="Machines" x:Name="lathesTab">
                <ContentControl Content="{Binding LatheViewModel}" IsEnabled="{Binding LatheViewModel, Converter={StaticResource ObjectIsNotNull}}" />
            </TabItem>
            <TabItem Header="Materials" x:Name="materialsTab">
                <ContentControl Content="{Binding MaterialsViewModel}" IsEnabled="{Binding MaterialsViewModel, Converter={StaticResource ObjectIsNotNull}}" />
            </TabItem>
            <TabItem Header="Dev" IsEnabled="False" x:Name="devTab" />
            <TabItem Header="Reports" x:Name="reportsTab">
                <Grid>
                    <StackPanel>
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="Orders"
                            Style="{StaticResource Action_Button}"
                            Content="Get CSV of orders" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="ItemCosting"
                            Style="{StaticResource Action_Button}"
                            Content="Get Item Costing" />

 
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="BarStockEstimate"
                            Style="{StaticResource Action_Button}"
                            Content="Estimate Bar Stock Inventory" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="Delivered"
                            Style="{StaticResource Action_Button}"
                            Content="Get Delivered Items" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="TotalManufactured"
                            IsEnabled="False"
                            Style="{StaticResource Action_Button}"
                            Content="Total Manufactured" />
                        <Button
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding GetRecordsAsCsvCmd}"
                            CommandParameter="ImportTriggers"
                            IsEnabled="False"
                            Style="{StaticResource Action_Button}"
                            Content="Import Triggers" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
