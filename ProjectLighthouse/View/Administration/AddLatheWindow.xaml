<Window x:Class="View.Administration.AddLatheWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Administration"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Add New Lathe" SizeToContent="Height" Width="650">
    <StackPanel Margin="20">
        <TextBlock Text="New Lathe" x:Name="TitleText" Style="{StaticResource title}"/>
        <Grid>
            <TextBlock Text="Lathe ID" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="ID" x:Name="idTextBox" LostFocus="idTextBox_LostFocus" MaxLength="3" HorizontalAlignment="Right" Width="100"/>
        </Grid>

        <Grid>
            <TextBlock Text="Full Name" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" MaxLength="16" Tag="Full Name" x:Name="fullNameTextBox" LostFocus="fullNameTextBox_LostFocus" HorizontalAlignment="Right" Width="250"/>
        </Grid>

        <Grid>
            <TextBlock Text="Make" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Make" x:Name="makeTextBox" LostFocus="makeTextBox_LostFocus" HorizontalAlignment="Right" Width="250"/>
        </Grid>

        <Grid>
            <TextBlock Text="Model" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Model" x:Name="modelTextBox" LostFocus="modelTextBox_LostFocus" HorizontalAlignment="Right" Width="250"/>
        </Grid>

        <Grid>
            <TextBlock Text="Serial Number" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Serial Number" x:Name="serialNumberTextBox" LostFocus="serialNumberTextBox_LostFocus" HorizontalAlignment="Right" Width="250"/>
        </Grid>

        <Grid>
            <TextBlock Text="Part-off Budget (mm)" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Part Off Budget" x:Name="partOffTextBox" LostFocus="partOffTextBox_LostFocus" PreviewKeyDown="AllowNumbersAndPeriodOnly" HorizontalAlignment="Right" Width="200"/>
        </Grid>

        <Grid>
            <TextBlock Text="Max Diameter (mm)" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Max Part Diameter" x:Name="maxDiameterTextBox" LostFocus="maxDiameterTextBox_LostFocus" PreviewKeyDown="AllowNumbersAndPeriodOnly" HorizontalAlignment="Right" Width="200"/>
        </Grid>

        <Grid>
            <TextBlock Text="Max Part Length (mm)" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Max Part Length" x:Name="maxLengthTextBox" LostFocus="maxLengthTextBox_LostFocus" PreviewKeyDown="AllowNumbersAndPeriodOnly" HorizontalAlignment="Right" Width="200"/>
        </Grid>

        <Grid>
            <TextBlock Text="Controller IP Address" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="IP Address" x:Name="ipAddressTextBox" LostFocus="ipAddressTextBox_LostFocus" PreviewKeyDown="AllowNumbersAndPeriodOnly" HorizontalAlignment="Right" Width="250"/>
        </Grid>

        <Grid>
            <TextBlock Text="Controller Reference" Style="{StaticResource section}" VerticalAlignment="Center" Margin="30,0,0,0"/>
            <TextBox Style="{StaticResource DefaultTextBox}" Tag="Controller Reference" x:Name="controllerReferenceTextBox" LostFocus="controllerReferenceTextBox_LostFocus" HorizontalAlignment="Right" Width="250"/>
        </Grid>
        <CheckBox x:Name="outOfServiceCheckBox" Content="Out of Service" HorizontalAlignment="Right" Margin="10"/>
        <TextBox Style="{StaticResource DefaultTextBox}" Tag="Remarks" MinHeight="100" x:Name="remarksTextBox" LostFocus="remarksTextBox_LostFocus"/>

        <Button HorizontalAlignment="Right" Content="Add Lathe" x:Name="SubmitButton" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
