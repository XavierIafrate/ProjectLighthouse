<UserControl
    x:Class="ProjectLighthouse.View.Administration.LatheView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:ProjectLighthouse.View.UserControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer d:Background="White">
        <StackPanel Margin="10">
            <TextBlock Style="{StaticResource title}" Text="Lathes" />
            <!--<Button Content="+ Lathe"/>-->

            <!--<TextBlock Style="{StaticResource title}" Text="Title" />
        <TextBlock Style="{StaticResource subtitle}" Text="subtitle" />
        <TextBlock Style="{StaticResource subsubtitle}" Text="subsubtitle" />
        <TextBlock Style="{StaticResource statement}" Text="statement" />
        <TextBlock Style="{StaticResource annotation}" Text="annotation" />-->


            <ItemsControl
                MaxWidth="900"
                Background="White"
                ItemsSource="{Binding Lathes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="20,10"
                            Background="White"
                            BorderBrush="{StaticResource DisabledElement}"
                            BorderThickness="2"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    FontSize="30"
                                    Style="{StaticResource subtitle}"
                                    Text="{Binding FullName}" />
                                <StackPanel MaxWidth="700">
                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="IP Address" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="IP Address"
                                            Text="{Binding IPAddress}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Controller Reference" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Controller Reference"
                                            Text="{Binding ControllerReference}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Max Length" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Max Length"
                                            Text="{Binding MaxLength}"
                                            TextAlignment="Right" />

                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Max Diameter" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Max Diameter"
                                            Text="{Binding MaxDiameter}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Serial Number" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Serial Number"
                                            Text="{Binding SerialNumber}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Make" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Make"
                                            Text="{Binding Make}"
                                            TextAlignment="Right" />
                                    </Grid>

                                    <Grid>
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            Style="{StaticResource section}"
                                            Text="Model" />
                                        <TextBox
                                            Width="250"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource DefaultTextBox}"
                                            Tag="Model"
                                            Text="{Binding Model}"
                                            TextAlignment="Right" />
                                    </Grid>


                                </StackPanel>
                                <TextBlock Style="{StaticResource section}" Text="Maintenance Plan" />
                                <ListView ItemsSource="{Binding Maintenance}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="20,10">
                                                <TextBlock Style="{StaticResource statement}" Text="{Binding}" />
                                                <StackPanel HorizontalAlignment="Right">
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource statement}"
                                                        Text="{Binding IntervalMonths, StringFormat='{}Every {0} Months'}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource statement}"
                                                        Text="{Binding StartingDate, StringFormat='{}Starting from {0:dd/MM/yyyy}'}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource statement}"
                                                        Text="{Binding LastCompleted, StringFormat='{}Last completed {0:dd/MM/yyyy}'}" />
                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        Style="{StaticResource statement}"
                                                        Text="{Binding LastCompleted, StringFormat='{}Next Due {0:dd/MM/yyyy}'}" />

                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>

                            </StackPanel>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>

</UserControl>
