<Window
    x:Class="ProjectLighthouse.View.Administration.AddMaterialInfoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Administration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="parentWindow"
    Title="Add Material"
    Width="800"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            d:Text="Add/Edit Material"
            Style="{StaticResource title}"
            Text="{Binding Title}" />
        <StackPanel Grid.Row="1">
            <TextBlock Style="{StaticResource SectionLabel}" Text="Metadata" />

            <TextBlock Style="{StaticResource InputLabel}" Text="Material Code" />
            <TextBox
                Style="{StaticResource DefaultTextBox}"
                Tag="code"
                Text="{Binding Material.MaterialCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Style="{StaticResource InputLabel}" Text="Description" />
            <TextBox
                Style="{StaticResource DefaultTextBox}"
                Tag="description"
                Text="{Binding Material.MaterialText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Style="{StaticResource InputLabel}" Text="Grade" />
            <TextBox
                Style="{StaticResource DefaultTextBox}"
                Tag="grade"
                Text="{Binding Material.GradeText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Style="{StaticResource InputLabel}" Text="Density (kg/m3)" />
            <TextBox
                Style="{StaticResource DefaultTextBox}"
                Tag="density"
                Text="{Binding Material.Density, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />

            <TextBlock Style="{StaticResource InputLabel}" Text="Cost per kilo (100 * £/kg)" />
            <TextBox
                Style="{StaticResource DefaultTextBox}"
                Tag="cost per kilo"
                Text="{Binding Material.Cost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </StackPanel>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.Resources>
                <ControlTemplate x:Key="SmallCrossButton" TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <Path
                            x:Name="path"
                            Width="10"
                            Height="10"
                            Margin="0"
                            Data="M12,2C17.53,2 22,6.47 22,12C22,17.53 17.53,22 12,22C6.47,22 2,17.53 2,12C2,6.47 6.47,2 12,2M15.59,7L12,10.59L8.41,7L7,8.41L10.59,12L7,15.59L8.41,17L12,13.41L15.59,17L17,15.59L13.41,12L17,8.41L15.59,7Z"
                            Fill="{TemplateBinding Foreground}"
                            Opacity="0.8"
                            Stretch="Uniform" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="path" Property="Opacity" Value="0.6" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="path" Property="Opacity" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>

                <ControlTemplate x:Key="SmallAddButton" TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <Path
                            x:Name="path"
                            Width="10"
                            Height="10"
                            Margin="0"
                            Data="M17,13H13V17H11V13H7V11H11V7H13V11H17M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"
                            Fill="{TemplateBinding Foreground}"
                            Opacity="0.8"
                            Stretch="Uniform" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="path" Property="Opacity" Value="0.6" />
                            <Setter Property="Cursor" Value="Hand" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="path" Property="Opacity" Value="1" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Style="{StaticResource SectionLabel}" Text="Machine Requirements" />
            <TextBlock
                Grid.Row="1"
                Style="{StaticResource InputLabel}"
                Text="Existing Machine Features" />

            <ItemsControl
                Grid.Row="2"
                d:ItemsSource="{d:SampleData ItemCount=4}"
                ItemsSource="{Binding ExistingFeatures}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="3"
                            Background="{StaticResource BlueFaded}"
                            CornerRadius="5">
                            <Grid Margin="5,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    MaxWidth="150"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource Blue}"
                                    Text="{Binding}"
                                    TextTrimming="CharacterEllipsis" />
                                <Button
                                    Grid.Column="1"
                                    Width="20"
                                    Height="20"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="AddFeatureButton_Click"
                                    Foreground="{StaticResource Blue}"
                                    Style="{x:Null}"
                                    Tag="{Binding}"
                                    Template="{StaticResource SmallAddButton}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxWidth="350" HorizontalAlignment="Left" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <TextBlock
                Grid.Row="3"
                Style="{StaticResource InputLabel}"
                Text="Required by this product" />
            <ItemsControl
                Grid.Row="4"
                d:ItemsSource="{d:SampleData ItemCount=10}"
                ItemsSource="{Binding Material.RequiresFeaturesList}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="3"
                            Background="{StaticResource PurpleFaded}"
                            CornerRadius="5">
                            <Grid Margin="5,3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    MaxWidth="150"
                                    FontWeight="SemiBold"
                                    Foreground="{StaticResource Purple}"
                                    Text="{Binding}"
                                    TextTrimming="CharacterEllipsis" />
                                <Button
                                    Grid.Column="1"
                                    Width="20"
                                    Height="20"
                                    Padding="0"
                                    VerticalAlignment="Center"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    Click="RemoveFeatureButton_Click"
                                    Foreground="{StaticResource Purple}"
                                    Style="{x:Null}"
                                    Tag="{Binding}"
                                    Template="{StaticResource SmallCrossButton}" />
                            </Grid>

                        </Border>

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel MaxWidth="350" HorizontalAlignment="Left" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>

        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,10,0,0">
            <Button
                x:Name="CreateButton"
                HorizontalAlignment="Right"
                Click="CreateButton_Click"
                Content="Create"
                Style="{StaticResource Action_New_Button}" />
            <Button
                x:Name="UpdateButton"
                HorizontalAlignment="Right"
                Click="CreateButton_Click"
                Content="Update"
                Style="{StaticResource Action_Update_Button}" />
        </StackPanel>

    </Grid>
</Window>
