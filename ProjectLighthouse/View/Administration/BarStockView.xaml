<UserControl
    x:Class="ProjectLighthouse.View.Administration.BarStockView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Administration"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:vc="clr-namespace:ProjectLighthouse.ViewModel.ValueConverters"
    d:Background="White"
    d:DesignHeight="900"
    d:DesignWidth="1350"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <vc:intToPrice x:Key="priceConverter" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="280" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    x:Name="searchBox"
                    Style="{StaticResource SearchBox}"
                    Text="{Binding SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Grid.Column="1"
                    Click="ClearButton_Click"
                    Style="{StaticResource ClearButton}" />
            </Grid>
            <ListView
                Grid.Row="1"
                Margin="5"
                HorizontalContentAlignment="Stretch"
                d:ItemsSource="{d:SampleData ItemCount=10}"
                ItemsSource="{Binding FilteredBarOverviews}"
                SelectedValue="{Binding SelectedBarStock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <uc:DisplayBarOverview Bar="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2">
                <Button
                    HorizontalAlignment="Left"
                    Command="{Binding AddBarCmd}"
                    Content="New Bar"
                    Style="{StaticResource Action_New_Button}" />
                <CheckBox
                    Grid.Row="2"
                    HorizontalAlignment="Right"
                    Content="Requisitions Only"
                    IsChecked="{Binding ShowRequisitionsOnly, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>
        </Grid>
        <!--#region Not found gif-->
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding SelectedBarStock, Converter={StaticResource NullToVisibility}}">
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="40"
                FontStyle="Italic"
                Opacity="0.6"
                Text="What is this?" />

            <Border
                Width="auto"
                Margin="0,10"
                VerticalAlignment="Top"
                CornerRadius="18">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        Direction="220"
                        Opacity="0.2"
                        ShadowDepth="20"
                        Color="Black" />
                </Border.Effect>
                <Border Name="ReceiverColor" CornerRadius="15">
                    <Grid MaxWidth="400" MaxHeight="300">
                        <Border
                            Name="Mask"
                            Background="{StaticResource Purple}"
                            CornerRadius="20" />
                        <Grid x:Name="image">
                            <Image
                                Name="Receiver"
                                MaxWidth="400"
                                MaxHeight="300"
                                gif:AnimationBehavior.AnimateInDesignMode="True"
                                gif:AnimationBehavior.RepeatBehavior="3"
                                gif:AnimationBehavior.SourceUri="pack://application:,,,/Resources/GIF/zoolander-what-is-this.gif"
                                RenderOptions.BitmapScalingMode="HighQuality" />
                            <Grid.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=Mask}" />
                            </Grid.OpacityMask>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Viewbox
                                MaxHeight="60"
                                Margin="20"
                                VerticalAlignment="Bottom">
                                <TextBlock Foreground="White" Text="{Binding SearchString, TargetNullValue='nothing found'}">
                                    <TextBlock.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.8"
                                            ShadowDepth="0"
                                            Color="Black" />
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>

                            <Viewbox
                                Grid.Column="1"
                                MaxWidth="100"
                                Margin="0,0,20,40"
                                VerticalAlignment="Bottom">
                                <TextBlock Foreground="White" Text="Lighthouse">
                                    <TextBlock.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            Opacity="0.8"
                                            ShadowDepth="0"
                                            Color="Black" />
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                FontStyle="Italic"
                Opacity="0.6"
                Text="{Binding SearchString, StringFormat='{}A {0} for ants?!', TargetNullValue='A request for ants?!'}" />
        </StackPanel>

        <!--#endregion-->

        <ScrollViewer
            Grid.Column="1"
            VerticalScrollBarVisibility="Hidden"
            Visibility="{Binding SelectedBarStock, Converter={StaticResource ObjectIsNotNull}}">
            <Grid MaxWidth="700" Margin="25,25,25,60">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Background="White" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="30"
                            Opacity="0.4"
                            ShadowDepth="0"
                            Color="Black" />
                    </Border.Effect>
                </Border>
                <StackPanel Margin="30,20">
                    <Grid>

                        <TextBlock
                            d:Text="PRB000-0000-000"
                            Style="{StaticResource title}"
                            Text="{Binding SelectedBarStock.BarStock.Id}" />
                        <Button
                            HorizontalAlignment="Right"
                            Command="{Binding AddBarCmd}"
                            CommandParameter="{Binding SelectedBarStock.BarStock}"
                            Content="Edit Bar"
                            Style="{StaticResource Action_Edit_Button}" />
                    </Grid>
                    <TextBlock Style="{StaticResource subtitle}">
                        <Run d:Text="Stainless Steel, Grade AISI 303" Text="{Binding SelectedBarStock.BarStock.MaterialData, TargetNullValue='MATERIAL INFO NOT FOUND', Mode=OneWay}" />
                    </TextBlock>

                    <Grid Margin="10,20,10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Style="{StaticResource InputLabel}" Text="Length (mm)" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="3000"
                            FontFamily="Consolas"
                            FontSize="25"
                            Text="{Binding SelectedBarStock.BarStock.Length, StringFormat='{}{0:#,##0}'}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource InputLabel}"
                            Text="Size (mm)" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            d:Text="12.70"
                            FontFamily="Consolas"
                            FontSize="25"
                            Text="{Binding SelectedBarStock.BarStock.Size, StringFormat='{}{0:0.00}'}" />


                        <TextBlock
                            Grid.Column="2"
                            Style="{StaticResource InputLabel}"
                            Text="Profile" />
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2"
                            d:Visibility="Collapsed"
                            Orientation="Horizontal"
                            Visibility="{Binding SelectedBarStock.IsHexagon, Converter={StaticResource boolToVisibleOrCollapsed}}">
                            <Path
                                Width="20"
                                Height="20"
                                Data="M21,16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V7.5C3,7.12 3.21,6.79 3.53,6.62L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.79,6.79 21,7.12 21,7.5V16.5Z"
                                Fill="{StaticResource OnBackground}"
                                Stretch="Uniform" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontFamily="Consolas"
                                FontSize="25"
                                Text="Hexagonal" />
                        </StackPanel>
                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="2"
                            Orientation="Horizontal"
                            Visibility="{Binding SelectedBarStock.IsHexagon, Converter={StaticResource boolToCollapsedOrVisible}}">
                            <Border
                                Width="20"
                                Height="20"
                                Background="{StaticResource OnBackground}"
                                CornerRadius="10" />
                            <TextBlock
                                Margin="5,0,0,0"
                                FontFamily="Consolas"
                                FontSize="25"
                                Text="Round" />
                        </StackPanel>

                    </Grid>


                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Style="{StaticResource InputLabel}" Text="Expected Cost" />
                        <TextBlock
                            Grid.Row="1"
                            d:Text="£12.34"
                            FontFamily="Consolas"
                            FontSize="25"
                            Text="{Binding SelectedBarStock.BarStock.ExpectedCost, StringFormat='{}{0:c}'}" />

                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource InputLabel}"
                            Text="Target Stock" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            d:Text="1,000"
                            FontFamily="Consolas"
                            FontSize="25"
                            Text="{Binding SelectedBarStock.BarStock.SuggestedStock, StringFormat='{}{0:#,##0}'}" />


                        <TextBlock
                            Grid.Column="2"
                            Style="{StaticResource InputLabel}"
                            Text="Dormant Status" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            FontFamily="Consolas"
                            FontSize="25"
                            Text="Active "
                            Visibility="{Binding SelectedBarStock.IsDormant, Converter={StaticResource boolToCollapsedOrVisible}}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            FontFamily="Consolas"
                            FontSize="25"
                            Foreground="{StaticResource Red}"
                            Text="Dormant"
                            Visibility="{Binding SelectedBarStock.IsDormant, Converter={StaticResource boolToVisibleOrCollapsed}}" />
                    </Grid>

                    <Grid
                        Margin="0,20"
                        HorizontalAlignment="Center"
                        Visibility="{Binding SelectedBarStock.IsDormant, Converter={StaticResource boolToCollapsedOrVisible}}">
                        <Grid.Resources>
                            <Style x:Key="FormulaNumber" TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="{StaticResource Purple}" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="40" />
                            </Style>
                            <Style x:Key="FormulaDecorator" TargetType="{x:Type TextBlock}">
                                <Setter Property="Foreground" Value="{StaticResource Purple}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="Opacity" Value="0.7" />
                                <Setter Property="FontSize" Value="20" />
                            </Style>
                            <Style x:Key="FormulaSymbol" TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="FontSize" Value="30" />
                                <Setter Property="Margin" Value="5" />
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            d:Text="99"
                            Style="{StaticResource FormulaNumber}"
                            Text="{Binding SelectedBarStock.BarStock.InStock}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource FormulaDecorator}"
                            Text="IN STOCK" />


                        <TextBlock
                            Grid.Column="1"
                            Style="{StaticResource FormulaSymbol}"
                            Text="+" />


                        <TextBlock
                            Grid.Column="2"
                            d:Text="100"
                            Style="{StaticResource FormulaNumber}"
                            Text="{Binding SelectedBarStock.BarStock.OnOrder}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource FormulaDecorator}"
                            Text="ON ORDER" />


                        <TextBlock
                            Grid.Column="3"
                            Style="{StaticResource FormulaSymbol}"
                            Text="-" />


                        <TextBlock
                            Grid.Column="4"
                            d:Text="200"
                            Style="{StaticResource FormulaNumber}"
                            Text="{Binding SelectedBarStock.BarsRequiredForOrders}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="4"
                            Style="{StaticResource FormulaDecorator}"
                            Text="REQUIRED" />


                        <TextBlock
                            Grid.Column="5"
                            Style="{StaticResource FormulaSymbol}"
                            Text="=" />


                        <TextBlock
                            Grid.Column="6"
                            d:Text="-1"
                            Style="{StaticResource FormulaNumber}"
                            Text="{Binding SelectedBarStock.FreeBar}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="6"
                            Style="{StaticResource FormulaDecorator}"
                            Text="FREE BAR" />

                    </Grid>

                    <Grid Visibility="{Binding SelectedBarStock.IsDormant, Converter={StaticResource boolToCollapsedOrVisible}}">
                        <Border
                            Background="{StaticResource PurpleFaded}"
                            CornerRadius="5"
                            Visibility="{Binding SuggestedOrderText, Converter={StaticResource ObjectIsNotNull}}">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Center"
                                d:Text="SUGGESTED_ORDER_TEXT"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource Purple}"
                                Text="{Binding SuggestedOrderText}" />
                        </Border>
                    </Grid>



                    <Grid Height="20" />
                    <Grid Visibility="{Binding DependentOrdersVis}">
                        <TextBlock
                            VerticalAlignment="Center"
                            Style="{StaticResource section}"
                            Text="{Binding SelectedBarStock.Orders.Count, StringFormat='{}Dependent Orders [{0}]'}" />
                        <Button
                            x:Name="NewIssueButton"
                            Margin="0,5"
                            HorizontalAlignment="Right"
                            Command="{Binding IssueBarCmd}"
                            Content="New Issue"
                            IsEnabled="false"
                            Style="{StaticResource Action_New_Button}" />
                    </Grid>
                    <ListView
                        x:Name="OrderListView"
                        Margin="5,5,5,20"
                        HorizontalContentAlignment="Stretch"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding SelectedBarStock.Orders}"
                        SelectedValue="{Binding SelectedOrder}"
                        SelectionChanged="OrderListView_SelectionChanged"
                        Visibility="{Binding DependentOrdersVis}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <uc:DisplayOrderBarIssues Order="{Binding}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
