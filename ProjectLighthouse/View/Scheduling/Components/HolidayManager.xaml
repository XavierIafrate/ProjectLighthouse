<UserControl x:Class="ProjectLighthouse.View.Scheduling.Components.HolidayManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.Scheduling.Components"
             mc:Ignorable="d" 
             d:Background="White" d:DesignWidth="500">
    <StackPanel>
        <TextBlock Text="Defined Holidays" Style="{StaticResource InputLabel}"/>
        <ListBox x:Name="DefinedHolidaysListBox" MaxHeight="200" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Path=., StringFormat='{}{0:ddd, dd/MM/yyyy}'}"/>
                        <Button Style="{StaticResource Action_Remove_Button_Small}" Tag="Remove" Grid.Column="1" x:Name="RemoveButton" CommandParameter="{Binding}" Click="RemoveButton_Click"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="Define New" Style="{StaticResource InputLabel}"/>

        <Grid Margin="0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <DatePicker x:Name="HolidaySelectionCalendar" SelectedDateChanged="HolidaySelectionCalendar_SelectedDateChanged"/>
            <Button IsEnabled="False" Margin="5" VerticalAlignment="Center" x:Name="AddButton" Tag="Add" Style="{StaticResource Action_New_Button}" Click="AddButton_Click" Grid.Column="1"/>
        </Grid>
    </StackPanel>
</UserControl>
