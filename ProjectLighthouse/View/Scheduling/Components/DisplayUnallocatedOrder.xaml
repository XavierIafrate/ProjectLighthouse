<UserControl
    x:Class="ProjectLighthouse.View.Scheduling.Components.DisplayUnallocatedOrder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Scheduling.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.Resources>
            <Style x:Key="controlStyle" TargetType="{x:Type ToggleButton}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">

                            <ContentPresenter
                                x:Name="content"
                                Margin="0"
                                HorizontalAlignment="Stretch" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <ToggleButton
            x:Name="MainButton"
            Checked="ToggleButton_Checked"
            PreviewMouseLeftButtonDown="MainButton_PreviewMouseLeftButtonDown"
            Style="{StaticResource controlStyle}"
            Unchecked="ToggleButton_Unchecked">
            <Border
                x:Name="BackgroundBorder"
                Padding="10,5, 10, 8"
                Background="{StaticResource Background}"
                BorderBrush="{StaticResource DisabledElement}"
                BorderThickness="2"
                CornerRadius="5">
                <StackPanel>
                    <TextBlock
                        x:Name="OrderText"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="ORDER_NAME" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="1"
                            FontWeight="SemiBold"
                            Opacity="0.8"
                            Text="Setting Allowance" />

                        <TextBlock
                            x:Name="SettingAllowanceTextBlock"
                            Grid.Row="1"
                            Grid.Column="2"
                            FontWeight="SemiBold"
                            Opacity="0.8"
                            Text="SETTING_H" />
                    </Grid>
                </StackPanel>

            </Border>
        </ToggleButton>
    </Grid>
</UserControl>
