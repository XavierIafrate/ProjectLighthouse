<Window x:Class="ProjectLighthouse.View.Orders.GeneralOrderConstructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View.Orders"
        mc:Ignorable="d"
        x:Name="parentControl"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height"
        ResizeMode="NoResize"
        Title="New Order" Width="500">
    <StackPanel Margin="20">
        <TextBlock Text="New Order" Style="{StaticResource title}"/>
        
        <TextBlock Text="Select Item" Style="{StaticResource InputLabel}"/>
        <ComboBox ItemsSource="{Binding ElementName=parentControl, Path=Items}" DisplayMemberPath="Name" SelectedValue="{Binding ElementName=parentControl, Path=NewOrder.NonTurnedItemId}" SelectedValuePath="Id"/>
        <TextBlock Text="Enter Quantity" Style="{StaticResource InputLabel}"/>
        <TextBox Text="{Binding ElementName=parentControl, Path=NewOrder.RequiredQuantity}" Style="{StaticResource DefaultTextBox}" Tag="required quantity"/>

        <TextBlock Text="Date Required" Style="{StaticResource InputLabel}"/>
        <DatePicker SelectedDate="{Binding ElementName=parentControl, Path=NewOrder.RequiredDate}" x:Name="DatePicker"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Style="{StaticResource Action_Cancel_Button}" Content="Cancel" x:Name="CancelButton" Click="CancelButton_Click"/>
            <Button Style="{StaticResource Action_New_Button}" Content="Create Order" x:Name="CreateButton" Click="CreateButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
