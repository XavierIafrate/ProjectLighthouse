                                            Grid.RowSpan="2"
                                            d:Text="recorded at 00:00:00"
                                            FontSize="12"
                                            FontStyle="Italic"
                                            Foreground="{Binding DisplayStats, Converter={StaticResource liveBadgeColour}}"
