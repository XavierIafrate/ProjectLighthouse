<UserControl
    x:Class="ProjectLighthouse.View.Orders.Components.DisplayOrderStateProgress"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Orders.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="parentControl"
    Width="40"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Background="{StaticResource RedFaded}"
            CornerRadius="5,0,0,5">
            <Path
                x:Name="ProblemCheck"
                Margin="10,5"
                HorizontalAlignment="Left"
                Fill="{StaticResource Background}"
                Style="{StaticResource Icon_Check}" />
        </Border>
        <Border
            x:Name="readyBorder"
            Grid.Row="1"
            Background="{StaticResource Surface}"
            CornerRadius="5,0,0,5">

            <Path
                x:Name="ReadyCheck"
                Margin="10,5"
                HorizontalAlignment="Left"
                Fill="{StaticResource Background}"
                Style="{StaticResource Icon_Check}" />
        </Border>
        <Border
            x:Name="preparedBorder"
            Grid.Row="2"
            Background="{StaticResource Surface}"
            CornerRadius="5,0,0,5">
            <Path
                x:Name="PreparedCheck"
                Margin="10,5"
                HorizontalAlignment="Left"
                Fill="{StaticResource Background}"
                Style="{StaticResource Icon_Check}" />

        </Border>
        <Border
            x:Name="runningBorder"
            Grid.Row="3"
            Background="{StaticResource Surface}"
            CornerRadius="5,0,0,5">
            <Path
                x:Name="RunningCheck"
                Margin="10,5"
                HorizontalAlignment="Left"
                Fill="{StaticResource Background}"
                Style="{StaticResource Icon_Check}" />

        </Border>
        <Border
            x:Name="completeBorder"
            Grid.Row="4"
            Background="{StaticResource Surface}"
            CornerRadius="5,0,0,5">
            <Path
                x:Name="CompleteCheck"
                Margin="10,5"
                HorizontalAlignment="Left"
                Fill="{StaticResource Background}"
                Style="{StaticResource Icon_Check}" />

        </Border>
    </Grid>
</UserControl>
