<UserControl x:Class="ProjectLighthouse.View.Orders.Components.DisplayOrderStateBadge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.Orders.Components"
             xmlns:valueConverters="clr-namespace:ProjectLighthouse.ViewModel.ValueConverters"
             mc:Ignorable="d" 
             x:Name="parentControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <valueConverters:OrderStateToBrush x:Key="BrushConverter"/>
        </Grid.Resources>
        <Border CornerRadius="5" Background="{Binding ElementName=parentControl, Path=OrderState, Converter={StaticResource BrushConverter}, ConverterParameter='faded',FallbackValue=Black}">
            <TextBlock FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="stateText" Margin="10,5" FontSize="{Binding FontSize, ElementName=parentControl}" Text="{Binding OrderState, ElementName=parentControl}" Foreground="{Binding ElementName=parentControl, Path=OrderState, Converter={StaticResource BrushConverter},FallbackValue=White}"/>
        </Border>
    </Grid>
</UserControl>
