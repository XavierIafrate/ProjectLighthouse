<UserControl x:Class="ProjectLighthouse.View.AnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ProjectLighthouse.ViewModel"
             xmlns:local="clr-namespace:ProjectLighthouse.View"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             Background="{StaticResource materialBackground}"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <vm:AnalyticsViewModel/>
    </UserControl.DataContext>
    <ScrollViewer HorizontalAlignment="Stretch">
        <StackPanel HorizontalAlignment="Stretch" MaxWidth="900">
            <Grid HorizontalAlignment="Center">
                <Grid.Resources>
                    <Style x:Key="dataHero" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="40"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontStyle" Value="Italic"/>
                        <Setter Property="Foreground" Value="{StaticResource materialPrimaryGreen}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource gradGood}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="statName" TargetType="TextBlock">
                        <Setter Property="FontSize" Value="30"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontStyle" Value="Italic"/>
                        <Setter Property="Foreground" Value="{StaticResource materialPrimaryBlue}"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource materialPrimary}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding Stats.TotalPartsMade, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:#,##0}'}"
                           Style="{StaticResource dataHero}"/>
                <TextBlock Text="total items delivered (all time)"
                           Grid.Column="2"
                           Style="{StaticResource statName}"/>

                <TextBlock Text="{Binding Stats.TotalPartsMadeThisYear, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:#,##0}'}"
                           Grid.Row="1"
                           Style="{StaticResource dataHero}"/>
                <TextBlock Text="total items delivered (this year)"
                           Grid.Row="1"
                           Grid.Column="2"
                           Style="{StaticResource statName}"/>

                <TextBlock Text="{Binding Stats.TotalOrders, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}{0:#,##0}'}"
                           Grid.Row="2"
                           Style="{StaticResource dataHero}"/>
                <TextBlock Text="orders"
                           Grid.Row="2"
                           Grid.Column="2"
                           Style="{StaticResource statName}"/>

                <!--<TextBlock Text="{Binding Stats.TotalValue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat='{}£{0:#,##0}'}"
                           Grid.Row="3"
                           Style="{StaticResource dataHero}"/>
                <TextBlock Text="total sales value*"
                           Grid.Row="3"
                           Grid.Column="2"
                           Style="{StaticResource statName}"/>-->
            </Grid>

            <!--MinValue="{Binding InitialDateTime.Ticks}"-->
            <TextBlock Text="Sum of Parts Made Over Time"
                       FontSize="18"
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>
            <lvc:CartesianChart Series="{Binding SeriesCollection}"
                                Height="400"
                                Margin="0,0,0,30">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis LabelFormatter="{Binding TimeFormatter}"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis MinValue="0" LabelFormatter="{Binding QuantityFormatter}"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <TextBlock Text="Parts made, last 6 weeks"
                       FontSize="18"
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>
            <lvc:CartesianChart Series="{Binding FiveWeekValueCollection}" LegendLocation="Top"
                                Height="400"
                                Margin="0,0,0,30">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Week" Labels="{Binding WeekLabels}"/>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Value Produced" LabelFormatter="{Binding ThousandPoundFormatter}"/>
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>

            <Grid>
                <Rectangle Fill="Black"/>
                <StackPanel Margin="30,15
                            ">
                    <TextBlock Text="Sentry" 
                               FontSize="25"
                               FontFamily="OCR A Extended"
                               Foreground="White"/>
                    <TextBlock Text="alarm and monitoring system" 
                               FontSize="16"
                               FontFamily="OCR A Extended"
                               Foreground="White"/>
                </StackPanel>
            </Grid>
            

            <TextBlock Text="Machine Performance (T-7d)"
                       FontSize="18"
                       Margin="0,20,0,10"
                       HorizontalAlignment="Center"/>
            <lvc:CartesianChart Series="{Binding MachineRuntimeCollection}" LegendLocation="Top"
                                
                                Height="400">
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Machine" Labels="{Binding LatheLabels}"/>
                </lvc:CartesianChart.AxisY>
                <!--<lvc:CartesianChart.AxisX>
                    --><!--<lvc:Axis LabelFormatter="{Binding SecondsToDaysFormatter}"/>--><!--
                </lvc:CartesianChart.AxisX>-->

            </lvc:CartesianChart>

            <lvc:Gauge Value="{Binding OverallOperating}"
                              From="0" To="100"
                              Height="200"
                              
                              FontWeight="Bold" FontSize="16"
                              LabelFormatter="{Binding PercentageStringFormat}">
                <!--<lvc:Gauge.Sections>
                    <lvc:AngularSection FromValue="0" ToValue="80"/>
                    <lvc:AngularSection FromValue="80" ToValue="100"
                                        Fill="{StaticResource materialPrimaryGreen}"/>
                </lvc:Gauge.Sections>-->
                
            </lvc:Gauge>
            <Grid Height="300"/>

            <!--<lvc:CartesianChart Series="{Binding OperatingByMachineSeriesCollection}" LegendLocation="Top">
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Browser" Labels="{Binding Labels}" />
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis LabelFormatter="{Binding Formatter}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip SelectionMode="SharedYValues"></lvc:DefaultTooltip>
                </lvc:CartesianChart.DataTooltip>
            </lvc:CartesianChart>-->

            <!--<TextBlock Text="*as calculated by a non-accountant. Probably accurate to +-50%. Maybe."
                       FontSize="10"
                       FontStyle="Italic"
                       HorizontalAlignment="Right"
                       Margin="0,10"/>-->

        </StackPanel>
    </ScrollViewer>
</UserControl>
