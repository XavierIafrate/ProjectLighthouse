<UserControl
    x:Class="ProjectLighthouse.View.CheckSheets.Components.ShowProductsList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.CheckSheets.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:usercontrols="clr-namespace:ProjectLighthouse.View.UserControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <usercontrols:SearchBox SearchTerm="Test"/>
        <ListBox ItemsSource="{Binding Products}" Grid.Row="1" SelectedValue="{Binding SelectedProduct}"/>
        <TextBlock Text="Filter stuff here" Grid.Row="2"/>
    </Grid>
</UserControl>
