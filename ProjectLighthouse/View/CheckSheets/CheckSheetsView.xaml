<UserControl
    x:Class="ProjectLighthouse.View.CheckSheets.CheckSheetsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ProjectLighthouse.View.CheckSheets.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.CheckSheets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    d:Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <components:ShowProductsList ViewModel="{Binding Path=., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ScrollViewer Grid.Column="1">
            <components:ShowProduct ViewModel="{Binding Path=., Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ScrollViewer>
    </Grid>
</UserControl>
