<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayLMOItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignWidth="450"
    Background="#01FFFFFF"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            
            <Path
                x:Name="doneFlag" 
                Width="18"
                Margin="0,0,5,0"
                Height="18"
                Data="M12 2C6.5 2 2 6.5 2 12S6.5 22 12 22 22 17.5 22 12 17.5 2 12 2M10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"
                Fill="{StaticResource materialPrimaryGreen}"
                Stretch="Uniform" />

            <StackPanel Margin="5,2,10,2" VerticalAlignment="Center" Grid.Column="1">
                <TextBlock
                    x:Name="productText"
                    Padding="0,2"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="{Binding ProductName, FallbackValue='P0XXX.123-456-A2'}" />
                <ProgressBar
                    x:Name="ProgressBar"
                    Margin="0,0,0,7"
                    Value="0.5" />
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="EditButton"
                        Margin="0,0,5,0"
                        Click="EditButton_Click"
                        Style="{StaticResource IconEditButton}">
                        <Button.Content>
                            <TextBlock Margin="0,0,7,2" Text="Edit" />
                        </Button.Content>
                    </Button>
                    <Grid x:Name="specialFlag">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border
                            Height="20"
                            Background="{StaticResource materialPrimary}"
                            CornerRadius="10" />
                        <TextBlock
                            Padding="10,0,10,2"
                            Foreground="{StaticResource materialOnPrimary}"
                            Text="Special" />
                    </Grid>
                </StackPanel>

            </StackPanel>


            <!--<Border Background="{StaticResource materialPrimaryGreen}" Grid.Column="1" VerticalAlignment="Center" CornerRadius="10">
                <TextBlock Text="complete" Foreground="{StaticResource materialOnPrimary}" Margin="5,5,5,6"/>
            </Border>
            -->
            

            <!--<Path Stroke="{StaticResource materialPrimary}" StrokeThickness="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="10,0">
                            <ArcSegment RotationAngle="0" SweepDirection="Clockwise"
                                        Size="10,10"
                                        Point="5,90"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>-->

            <StackPanel
                x:Name="requirements"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Rectangle
                        x:Name="requirementsBadge"
                        Fill="{StaticResource materialError}"
                        RadiusX="5"
                        RadiusY="5" />
                    <StackPanel Margin="10,0">
                        <TextBlock
                            x:Name="qtyrequired"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource materialOnError}"
                            Text="{Binding RequiredQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='100 pcs'}" />
                        <TextBlock
                            x:Name="daterequired"
                            HorizontalAlignment="Right"
                            FontSize="12"
                            Foreground="{StaticResource materialOnError}"
                            Text="{Binding DateRequired, StringFormat='{}{0:dd/MM/yy}', FallbackValue='01/01/1970'}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <Grid
                Grid.Column="4"
                Margin="5"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" MinWidth="10" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock FontWeight="SemiBold" Text="Target:" />
                <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Text="{Binding TargetQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='1,000 pcs'}" />

                <TextBlock
                    Grid.Row="1"
                    FontWeight="SemiBold"
                    Text="Made:" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Text="{Binding QuantityMade, StringFormat='{}{0:#,##0} pcs', FallbackValue='0 pcs'}" />

                <TextBlock
                    Grid.Row="2"
                    FontWeight="SemiBold"
                    Text="Delivered:" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    Text="{Binding QuantityDelivered, StringFormat='{}{0:#,##0} pcs', FallbackValue='0 pcs'}" />
            </Grid>

        </Grid>
    </Grid>
</UserControl>
