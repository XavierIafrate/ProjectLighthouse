<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayLMOItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="400"
    Background="Transparent"
    mc:Ignorable="d">
    <Grid Margin="0,2">
        <Rectangle
            x:Name="bgRect"
            Fill="{StaticResource materialBackground}"
            RadiusX="5"
            RadiusY="5"
            Stroke="#f0f0f0" />

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" MinWidth="130" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Margin="10,2" VerticalAlignment="Center">
                <TextBlock
                    x:Name="productText"
                    Padding="0,2"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Text="{Binding ProductName, FallbackValue='P0XXX.123-456-A2'}" />
                <Grid x:Name="specialFlag">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="{StaticResource materialPrimary}" />
                    <TextBlock
                        Padding="10,0,10,2"
                        Foreground="{StaticResource materialOnPrimary}"
                        Text="Special" />
                </Grid>
            </StackPanel>


            <StackPanel
                x:Name="requirements"
                Grid.Column="2"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Rectangle
                        x:Name="requirementsBadge"
                        Fill="{StaticResource materialError}"
                        RadiusX="5"
                        RadiusY="5" />
                    <StackPanel Margin="10,0">
                        <TextBlock
                            x:Name="qtyrequired"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource materialOnError}"
                            Text="{Binding RequiredQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='100 pcs'}" />
                        <TextBlock
                            x:Name="daterequired"
                            HorizontalAlignment="Right"
                            FontSize="12"
                            Foreground="{StaticResource materialOnError}"
                            Text="{Binding DateRequired, StringFormat='{}{0:dd/MM/yy}', FallbackValue='01/01/1970'}" />
                    </StackPanel>
                </Grid>
                <Image
                    x:Name="doneFlag"
                    Grid.Column="5"
                    Height="20"
                    Margin="5"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Resources/done.png" />
            </StackPanel>

            <Grid
                Grid.Column="4"
                Margin="5"
                VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" MinWidth="5" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <TextBlock Text="Target" />
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    FontSize="12"
                    Text="{Binding TargetQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='1000 pcs'}" />

                <TextBlock Grid.Row="1" Text="Made" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    FontSize="12"
                    Text="{Binding QuantityMade, StringFormat='{}{0:#,##0} pcs', FallbackValue='0 pcs'}" />
            </Grid>

        </Grid>
    </Grid>
</UserControl>
