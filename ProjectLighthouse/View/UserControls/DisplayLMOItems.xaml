<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayLMOItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" d:DesignWidth="400"
             Background="Transparent">
    <Grid Margin="0,2">
        <Rectangle Fill="{StaticResource materialBackground}" RadiusX="5" RadiusY="5" Stroke="#f0f0f0">
            <!--<Rectangle.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="220" Color="Black" Opacity="0.2"/>
            </Rectangle.Effect>-->
        </Rectangle>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto" MinWidth="130"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Center" Margin="10,2">
                <TextBlock Text="{Binding ProductName, FallbackValue='P0XXX.123-456-A2'}"
                           x:Name="productText"
                           VerticalAlignment="Center"
                           FontSize="15"
                           Padding="0,2"/>
                <Grid x:Name="specialFlag">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Fill="{StaticResource materialPrimary}"/>
                    <TextBlock Text="Special" Padding="10,0,10,2" Foreground="{StaticResource materialOnPrimary}"/>
                </Grid>
            </StackPanel>


            <StackPanel Grid.Column="2" VerticalAlignment="Center" x:Name="requirements">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Rectangle Fill="{StaticResource materialError}" RadiusX="5" RadiusY="5" x:Name="requirementsBadge"/>
                    <StackPanel Margin="10,0">
                        <TextBlock Text="{Binding RequiredQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='100 pcs'}"
                               x:Name="qtyrequired"
                               Foreground="{StaticResource materialOnError}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               FontSize="12"/>
                        <TextBlock Text="{Binding DateRequired, StringFormat='{}{0:dd/MM/yy}', FallbackValue='01/01/1970'}"
                               x:Name="daterequired"
                               Foreground="{StaticResource materialOnError}"
                               HorizontalAlignment="Right"
                               FontSize="12"/>
                    </StackPanel>

                </Grid>

            </StackPanel>

            <Grid Grid.Column="4" VerticalAlignment="Center" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*" MinWidth="5"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Target"/>
                <TextBlock Text="{Binding TargetQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='1000 pcs'}"
                           Grid.Column="1"
                           HorizontalAlignment="Right"
                           FontSize="12"/>

                <TextBlock Text="Delivered" Grid.Row="1"/>
                <TextBlock Text="{Binding QuantityMade, StringFormat='{}{0:#,##0}', FallbackValue='0 pcs'}"
                           HorizontalAlignment="Right"
                           Grid.Column="1"
                           Grid.Row="1"
                           FontSize="12"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
