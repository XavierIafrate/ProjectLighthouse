<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayDeliveryNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             MinHeight="50"
             MinWidth="200"
             d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10,5,5,5"
                    VerticalAlignment="Center">
            <TextBlock Text="{Binding Name, FallbackValue='M00001'}"
                       x:Name="MOTextBlock"
                       Foreground="{StaticResource materialOnBackground}"
                       FontSize="22"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding DeliveryDate, FallbackValue='01/01/1970', StringFormat='{}Delivered {0:dd/MM/yy HH:mm}'}"
                       x:Name="PORTextBlock"
                       Foreground="{StaticResource materialPrimaryGreen}"
                       FontSize="12"/>
        </StackPanel>
    </Grid>
</UserControl>
