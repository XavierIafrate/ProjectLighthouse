<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayToleranceDefinition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignWidth="300">
    <Grid TextElement.FontFamily="Consolas" Margin="5,2" x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock d:Text="ADDRESS" Grid.Row="0" VerticalAlignment="Center" x:Name="AddressText" FontWeight="SemiBold" FontSize="16"/>
        <TextBlock d:Text="Description" Grid.Row="1" VerticalAlignment="Center" x:Name="DescriptionText" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="12"/>
        <TextBlock d:Text="NOM" Grid.Column="1" Grid.RowSpan="2" VerticalAlignment="Center" x:Name="NominalText"/>
        <Grid Grid.Column="2" Grid.RowSpan="2" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        <TextBlock d:Text="+MAX"  x:Name="MaxText"/>
        <TextBlock d:Text="-MIN" Grid.Row="1" x:Name="MinText" />
        </Grid>
    </Grid>
</UserControl>
