<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayLatheManufactureOrder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             MinHeight="50"
             MinWidth="200"
             d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="5"
                    VerticalAlignment="Center">
            <TextBlock Text="{Binding Name, FallbackValue='M00001'}"
                       x:Name="MOTextBlock"
                       Foreground="{StaticResource materialOnBackground}"
                       FontSize="22"
                       FontWeight="Bold"/>
            <TextBlock Text="{Binding POReference, FallbackValue='POR012345'}"
                       x:Name="PORTextBlock"
                       Foreground="{StaticResource materialOnBackground}"
                       FontSize="12"/>
        </StackPanel>
        <Grid Grid.Column="2" Margin="10,0" VerticalAlignment="Center">
            <Rectangle x:Name="badgeBackground" Fill="{StaticResource materialError}" RadiusX="5" RadiusY="5"/>
            <TextBlock Text="Ready" x:Name="BadgeText" FontSize="14" Padding="15,0,15,2" Foreground="{StaticResource materialOnPrimary}"/>
        </Grid>
        <!--<StackPanel Orientation="Vertical"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Margin="10,0">
            <Image Source="/Resources/MO-CompleteBadge.png" Height="15"
                   x:Name="CompleteFlag" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Image Source="/Resources/MO-ReadyBadge.png" Height="15"
                   x:Name="ReadyFlag" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Image Source="/Resources/MO-WarningBadge.png" Height="15"
                   x:Name="WarnFlag" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Image Source="/Resources/MO-ErrorBadge.png" Height="15"
                   x:Name="StopFlag" RenderOptions.BitmapScalingMode="HighQuality"/>
            <Image Source="/Resources/MO-RunningBadge.png" Height="15"
                   x:Name="RunningFlag" RenderOptions.BitmapScalingMode="HighQuality"/>
        </StackPanel>-->
    </Grid>
</UserControl>
