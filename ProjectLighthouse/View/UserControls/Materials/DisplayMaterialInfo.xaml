<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayMaterialInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             d:Background="White" d:DesignWidth="500">
    <StackPanel>
        <TextBlock Text="{Binding MaterialCode}" d:Text="M_CODE"/>
        <TextBlock Text="{Binding MaterialText}" d:Text="MATERIAL_TEXT"/>
        <TextBlock Text="{Binding GradeText}" d:Text="GRADE_TEXT"/>
    </StackPanel>
</UserControl>
