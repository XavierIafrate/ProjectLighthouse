<UserControl x:Class="ProjectLighthouse.View.UserControls.LMOConstructionDisplayLMOItems"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d">
    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ProductName, FallbackValue='P0123.456-789-A2'}" FontSize="20" Margin="10"/>
        <TextBlock Text="{Binding DateRequired, StringFormat='{}{0:dd/MM/yy}', FallbackValue='01/01/1970'}" FontSize="20" Margin="10" Grid.Column="1" x:Name="requiredDate" HorizontalAlignment="Right"/>
        <TextBlock Text="{Binding RequiredQuantity, StringFormat='{}{0:#,##0} pcs',FallbackValue='10 pcs'}" FontSize="20" Margin="10" Grid.Column="2" x:Name="requiredQuantity" HorizontalAlignment="Right"/>
        <TextBlock Text="{Binding TargetQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='500 pcs'}" FontSize="20" Margin="10" Grid.Column="3" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
