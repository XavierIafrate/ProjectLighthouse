<UserControl
    x:Class="ProjectLighthouse.View.UserControls.LMOConstructionDisplayLMOItems"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.RowSpan="2"
            Margin="10"
            VerticalAlignment="Center"
            FontSize="20"
            Text="{Binding ProductName, FallbackValue='P0123.456-789-A2'}" />

        <Grid
            x:Name="customerRequirementBadge"
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <Rectangle
                Grid.RowSpan="2"
                Fill="{StaticResource materialPrimaryGreen}"
                RadiusX="5"
                RadiusY="5" />
            <StackPanel Margin="10,5" HorizontalAlignment="Right">
                <TextBlock
                    x:Name="requiredQuantity"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    Foreground="{StaticResource materialOnPrimary}"
                    Text="{Binding RequiredQuantity, StringFormat='{}{0:#,##0} pcs', FallbackValue='10 pcs'}" />
                <TextBlock
                    x:Name="requiredDate"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    FontSize="16"
                    Foreground="{StaticResource materialOnPrimary}"
                    Text="{Binding DateRequired, StringFormat='{}{0:dd/MM/yy}', FallbackValue='01/01/1970'}" />
            </StackPanel>
        </Grid>

        <TextBlock
            VerticalAlignment="Bottom"
            Grid.Column="2"
            HorizontalAlignment="Right"
            FontSize="16"
            Text="{Binding TargetQuantity, StringFormat='{}target: {0:#,##0} pcs', FallbackValue='target: 500 pcs'}" />

        <TextBlock
            x:Name="cycleTime"
            Foreground="DodgerBlue"
            Grid.Column="2"
            Grid.Row="1"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            FontSize="14"
            Text="{Binding CycleTime, StringFormat='{}cycle time: {0}s', FallbackValue='cycle time: 120s'}" />
    </Grid>
</UserControl>
