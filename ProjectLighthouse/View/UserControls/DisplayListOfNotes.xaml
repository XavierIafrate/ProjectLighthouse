<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayListOfNotes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl x:Name="NotesList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:DisplayNote Note="{Binding}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <TextBlock Text="None" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource GhostText}" x:Name="noneText"/>
    </Grid>
</UserControl>
