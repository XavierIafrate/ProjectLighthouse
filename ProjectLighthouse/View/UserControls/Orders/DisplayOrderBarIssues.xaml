<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayOrderBarIssues"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        x:Name="OrderNameTextBox"
                        FontSize="22"
                        FontWeight="SemiBold"
                        Text="M00000" />
                    <Border
                        x:Name="IssueRequestedBadge"
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Background="{StaticResource OrangeFaded}"
                        BorderBrush="{StaticResource Orange}"
                        BorderThickness="2,0,0,0"
                        CornerRadius="3">
                        <TextBlock
                            Margin="8,3"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Foreground="{StaticResource Orange}"
                            Text="Issue Requested" />
                    </Border>
                </StackPanel>
                <TextBlock
                    x:Name="StatusText"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Purple}"
                    Text="STATUS_TEXT" />
            </Grid>
            <Grid>
                <TextBlock
                    x:Name="StartDateTextBox"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Text="Set Date: 01/01/1970" />
                <TextBlock
                    x:Name="NumBarsTextBox"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Text="99 Bars Required" />
            </Grid>
            <ItemsControl
                x:Name="IssuesListBox"
                Margin="10"
                d:ItemsSource="{d:SampleData ItemCount=5}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                FontWeight="Bold"
                                Foreground="{StaticResource Blue}"
                                Text="{Binding Date, StringFormat='{}{0:s}'}" />
                            <!--<TextBlock
                                Grid.Column="1"
                                Margin="5,0"
                                FontWeight="SemiBold"
                                Text="{Binding BarId}" />-->
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                FontWeight="Bold"
                                Text="{Binding Quantity, StringFormat='{}{0} ISSUED'}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
