<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayTechnicalDrawing"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="550.625"
    mc:Ignorable="d">
    <Grid>
        <Border Background="{StaticResource Surface}" CornerRadius="3" />
        <Grid Margin="15,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="filename"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="DRAWING_NAME" />
                <Border
                    x:Name="newBadge"
                    Margin="5,2,0,0"
                    Padding="5,2"
                    VerticalAlignment="Center"
                    Background="{StaticResource TealFaded}"
                    CornerRadius="2">
                    <TextBlock
                        FontSize="10"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Teal}"
                        Text="NEW" />
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Opacity="0.6">
                <TextBlock
                    x:Name="rev"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Revision 1A" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text=" - " />
                <TextBlock
                    x:Name="issueDate"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text="Issued 01/01/1970" />
            </StackPanel>

            <Button
                x:Name="inspectionLogButton"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Click="InspectionLogButton_Click"
                Style="{StaticResource Action_Open_CheckSheet_Button}"
                Content="Inspection Log" />

            <Button
                x:Name="openButton"
                Grid.RowSpan="2"
                Grid.Column="2"
                Margin="0"
                VerticalAlignment="Center"
                Click="OpenButton_Click"
                Style="{StaticResource Action_Open_Drawing_Button}"
                Content="Drawing" />

        </Grid>
    </Grid>
</UserControl>
