<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayLMOScheduling"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="DodgerBlue" RadiusX="10" RadiusY="10"/>
        <TextBlock Text="{Binding Name, FallbackValue='M00001'}" FontSize="22" VerticalAlignment="Center" Foreground="White" Margin="10,5" FontWeight="Bold"/>
    </Grid>
</UserControl>
