<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayManifestItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             xmlns:core="clr-namespace:ProjectLighthouse.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid d:DataContext="{x:Type core:LatheManufactureOrderItem}">
        <TextBlock Text="{Binding ProductName}" Margin="5" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="16"/>
        <StackPanel HorizontalAlignment="Right" Margin="5">
            <TextBlock Text="{Binding RequiredQuantity, StringFormat='{}Required: {0} pcs'}" HorizontalAlignment="Right" x:Name="RequiredText" FontStyle="Italic" FontWeight="DemiBold"/>
            <TextBlock Text="{Binding TargetQuantity, StringFormat='{}Target for Stock: {0} pcs'}" HorizontalAlignment="Right" Foreground="{StaticResource Green}" FontWeight="DemiBold"/>
        </StackPanel>
    </Grid>
</UserControl>
