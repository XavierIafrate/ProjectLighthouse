<UserControl x:Class="ProjectLighthouse.View.UserControls.LMOConstructionDisplayProducts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ProductName, FallbackValue='P0XXX.123-456-A2'}" VerticalAlignment="Center" FontSize="18" Foreground="{StaticResource materialOnBackground}" FontWeight="Bold"/>
        <Image Source="/Resources/MO-3star.png" Grid.Column="1" Margin="10,0" VerticalAlignment="Center"  HorizontalAlignment="Left" Height="20" x:Name="RatingImage" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock Text="1,000 pcs" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="18" Grid.Column="3" x:Name="recommendedQtyText"/>
    </Grid>
</UserControl>
