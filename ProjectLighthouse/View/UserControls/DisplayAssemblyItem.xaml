<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayAssemblyItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ProductNumber}" FontSize="16" VerticalAlignment="Center"/>
        <Grid Grid.Column="2" Margin="2">
            <!--<Rectangle Fill="{StaticResource materialPrimaryVar}" RadiusX="8" RadiusY="8"/>-->
            <Grid Margin="10,2">
                <TextBlock Text="{Binding ProductGroup}" 
                           Padding="0,0,0,2"
                           Foreground="{StaticResource materialOnBackground}"
                           FontStyle="Italic"
                           Opacity="0.3"
                           FontSize="16"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
