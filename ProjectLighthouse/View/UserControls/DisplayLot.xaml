<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayLot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <Style x:Key="text" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsReject}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource materialError}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsDelivered}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource materialPrimaryGreenVar}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Margin="5,0" x:Name="controlGrid">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="{Binding Date, StringFormat='{}{0:dd/MM/yy HH:mm}'}"/>
        <TextBlock Text="{Binding Quantity, StringFormat='{}{0:#,##0} pcs'}"
                   Style="{StaticResource text}"
                   Grid.Column="1"/>
        <TextBlock x:Name="HelperText"
                   Style="{StaticResource text}"
                   Grid.Column="2"/>
        
        <TextBlock Text="{Binding AddedBy, StringFormat='{}{0}'}" Grid.Row="1"/>
        <TextBlock Text="{Binding MaterialBatch}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                   ToolTipService.InitialShowDelay="2000" 
                   ToolTipService.ShowDuration="10000" 
                   ToolTipService.BetweenShowDelay="1000" 
                   ToolTip="{Binding MaterialBatch}"/>

    </Grid>
</UserControl>
