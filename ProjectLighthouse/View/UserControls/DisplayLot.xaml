<UserControl x:Class="ProjectLighthouse.View.UserControls.DisplayLot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
             Background="Transparent" >
    <UserControl.Resources>
        <Style x:Key="text" TargetType="TextBlock">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsReject}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource materialError}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Path=IsDelivered}" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource materialPrimaryGreenVar}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    
    <Grid x:Name="controlGrid">
        <Rectangle Fill="White" RadiusX="6" RadiusY="6">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="7" ShadowDepth="2" Direction="220" Color="Black" Opacity="0.3"/>
            </Rectangle.Effect>
        </Rectangle>
        <Grid Margin="8,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" MaxWidth="350"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
        
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="14">
                <Run Text="{Binding Date, StringFormat='{}Recorded at {0:dd/MM/yy HH:mm}'}"/>
                <Run Text="{Binding AddedBy, StringFormat='{}by {0}'}"/>
            </TextBlock>
            <TextBlock Text="{Binding Quantity, StringFormat='{}{0:#,##0} pcs'}"
                       Style="{StaticResource text}"
                       Grid.Column="2"
                       FontSize="16" 
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="HelperText"
                       Style="{StaticResource text}"
                       Grid.Column="2"
                       HorizontalAlignment="Right"
                       Grid.Row="1"/>
        
            <TextBlock Text="{Binding MaterialBatch}" Grid.Row="2" Grid.ColumnSpan="1"
                       Foreground="{StaticResource materialPrimaryBlue}"
                       FontStyle="Italic"
                       ToolTipService.InitialShowDelay="2000" 
                       ToolTipService.ShowDuration="10000" 
                       ToolTipService.BetweenShowDelay="1000" 
                       ToolTip="{Binding MaterialBatch}"/>
        </Grid>
    </Grid>
</UserControl>
