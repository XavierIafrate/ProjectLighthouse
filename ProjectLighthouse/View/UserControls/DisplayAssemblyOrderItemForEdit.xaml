<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayAssemblyOrderItemForEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:ProjectLighthouse.Model.Assembly"
    d:DataContext="{d:DesignInstance model:AssemblyOrderItem}"
    d:DesignHeight="46.118"
    d:DesignWidth="390.239"
    MouseEnter="UserControl_MouseEnter"
    MouseLeave="UserControl_MouseLeave"
    mc:Ignorable="d">
    <Grid Margin="0,1">
        <Rectangle
            Fill="{StaticResource materialBackground}"
            RadiusX="3"
            RadiusY="3">
            <Rectangle.Effect>
                <DropShadowEffect
                    BlurRadius="20"
                    Direction="220"
                    Opacity="0.2"
                    ShadowDepth="5"
                    Color="Black" />
            </Rectangle.Effect>
        </Rectangle>
        <Grid Margin="5,2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Path
                x:Name="DoneCheckMark"
                Margin="6,0,5,0"
                VerticalAlignment="Center"
                Data="M9,20.42L2.79,14.21L5.62,11.38L9,14.77L18.88,4.88L21.71,7.71L9,20.42Z"
                Fill="{StaticResource materialPrimaryGreen}" Height="16" Stretch="Fill" />
            <TextBlock
                Grid.Column="1"
                Margin="0,5"
                VerticalAlignment="Center"
                FontSize="14"
                x:Name="ProductNameTextBlock" />
            <StackPanel Grid.Column="3" Orientation="Horizontal">
                <TextBlock
                    x:Name="SavedText"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontStyle="Italic"
                    Foreground="{StaticResource materialPrimaryGreen}"
                    Text="saved"
                    Visibility="Collapsed" />
                <Button
                    x:Name="EditButton"
                    Margin="10,0"
                    Click="EditButton_Click"
                    Content="edit"
                    Style="{StaticResource SubtleButtonTemplate}" />
                <Button
                    x:Name="SaveButton"
                    Margin="10,0"
                    Click="SaveButton_Click"
                    Content="save"
                    Style="{StaticResource SubtleGreenButtonTemplate}"
                    Visibility="Collapsed" />

                <Label
                    x:Name="ReadOnlyQuantityReadyText"
                    Width="60"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Right"
                    FontSize="14" />

                <TextBox
                    x:Name="QuantityReadyTextBox"
                    Width="60"
                    HorizontalContentAlignment="Right"
                    FontSize="14"
                    MaxLength="6"
                    PreviewKeyDown="QuantityReadyTextBox_PreviewKeyDown"
                    Visibility="Collapsed" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Text=" of " />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    x:Name="RequiredQuantityTextBlock" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
