<UserControl
    x:Class="ProjectLighthouse.View.UserControls.DisplayProductGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    d:DesignHeight="40"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <!--<ColumnDefinition Width="Auto" MinWidth="35" />-->
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <!--<TextBlock
                Grid.RowSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Consolas"
                FontWeight="SemiBold"
                Foreground="{StaticResource Purple}"
                Text="{Binding Id}" />-->
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Margin="5,0"
                FontSize="16"
                FontWeight="SemiBold"
                Text="{Binding Name}" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,0"
                d:Visibility="Collapsed"
                Orientation="Horizontal"
                Visibility="{Binding ProgramId, Converter={StaticResource NotNullToVisibility}}">
                <Path
                    Width="9"
                    Margin="1,0,4,0"
                    Data="M14 2H6C4.89 2 4 2.9 4 4V20C4 21.11 4.89 22 6 22H18C19.11 22 20 21.11 20 20V8L14 2M18 20H6V4H13V9H18V20M9.54 15.65L11.63 17.74L10.35 19L7 15.65L10.35 12.3L11.63 13.56L9.54 15.65M17 15.65L13.65 19L12.38 17.74L14.47 15.65L12.38 13.56L13.65 12.3L17 15.65Z"
                    Fill="{StaticResource Blue}"
                    Stretch="Uniform" />
                <TextBlock
                    d:Text="PROGRAM_ID"
                    FontSize="11"
                    Foreground="{StaticResource Blue}"
                    Text="{Binding ProgramId, TargetNullValue='No Program'}" />
            </StackPanel>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Margin="5,0"
                d:Visibility="Visible"
                Orientation="Horizontal"
                Visibility="{Binding ProgramId, Converter={StaticResource NullToVisibility}}">
                <Path
                    Width="9"
                    Margin="1,0,4,0"
                    Data="M14 2H6C4.89 2 4 2.9 4 4V20C4 21.11 4.89 22 6 22H18C19.11 22 20 21.11 20 20V8L14 2M18 20H6V4H13V9H18V20M9.54 15.65L11.63 17.74L10.35 19L7 15.65L10.35 12.3L11.63 13.56L9.54 15.65M17 15.65L13.65 19L12.38 17.74L14.47 15.65L12.38 13.56L13.65 12.3L17 15.65Z"
                    Fill="{StaticResource Red}"
                    Stretch="Uniform" />
                <TextBlock
                    FontSize="11"
                    Foreground="{StaticResource Red}"
                    Text="No Program" />
            </StackPanel>

        </Grid>
        <Button
            Margin="0,0,5,0"
            HorizontalAlignment="Right"
            Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl, Mode=FindAncestor, AncestorLevel=2}, Path=DataContext.AddProductGroupCmd}"
            CommandParameter="{Binding Path=.}"
            Style="{StaticResource Action_Edit_Button_Small}"
            Tag="Edit" />
    </Grid>
</UserControl>
