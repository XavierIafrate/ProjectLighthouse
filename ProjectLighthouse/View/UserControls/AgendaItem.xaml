<UserControl
    x:Class="ProjectLighthouse.View.UserControls.AgendaItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ProjectLighthouse.ViewModel.ValueConverters"
    xmlns:core="clr-namespace:ProjectLighthouse.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="White"
    mc:Ignorable="d">
    <Grid x:Name="ControlGrid" Margin="0,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <converters:intToDays x:Key="intToDaysConverter" />
        </Grid.Resources>

        <Border
            x:Name="Warning"
            Width="5"
            Margin="0,0,5,0"
            Background="Black" />
        <StackPanel Grid.Column="1">
            <Grid>
                <TextBlock
                    x:Name="DateText"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Text="Monday 1st" />
                <TextBlock x:Name="Counter" Text="{Binding Orders.Count, StringFormat='{}{0}x'}" FontFamily="Consolas" HorizontalAlignment="Right"/>
            </Grid>

            <ItemsControl
                x:Name="orderList"
                Margin="0"
                ItemsSource="{Binding Orders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type core:LatheManufactureOrder}">
                        <Grid Margin="5,2">
                            <Grid>
                                <Border
                                    Grid.ColumnSpan="5"
                                    Background="{StaticResource Background}"
                                    CornerRadius="3"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource Teal}"
                                    SnapsToDevicePixels="True"/>
                                <Grid Margin="10,4" TextElement.FontSize="13">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        FontFamily="Consolas"
                                        Text="{Binding Name}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        FontFamily="Consolas"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding AllocatedMachine}" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <TextBlock
                x:Name="NoneIndicator"
                HorizontalAlignment="Center"
                FontSize="12"
                FontStyle="Italic"
                Foreground="{StaticResource DisabledElement}"
                Text="None" />
        </StackPanel>
    </Grid>
</UserControl>
