<Window
    x:Class="ProjectLighthouse.View.Programs.Monaco"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.Programs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Monaco"
    Width="1200"
    Height="800"
    Background="#011627"
    Loaded="Window_Loaded"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Margin="40,20"
            FontSize="40"
            Foreground="#d6deeb"
            Text="Monaco Editor" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Margin="30,10"
                FontFamily="pack://application:,,,/Resources/Font/#Montserrat"
                FontWeight="SemiBold"
                Foreground="#d6deeb"
                Text="$1 MAIN SPINDLE" />

            <TextBlock
                Grid.Column="1"
                Margin="30,10"
                FontFamily="pack://application:,,,/Resources/Font/#Montserrat"
                FontWeight="SemiBold"
                Foreground="#d6deeb"
                Text="$2 SUB SPINDLE" />

            <wv2:WebView2
                x:Name="dollarOne"
                Grid.Row="1"
                Grid.Column="0"
                Width="Auto"
                Height="Auto"
                d:Visibility="Visible"
                Visibility="Hidden" />

            <wv2:WebView2
                x:Name="dollarTwo"
                Grid.Row="1"
                Grid.Column="1"
                Width="Auto"
                Height="Auto"
                d:Visibility="Visible"
                Visibility="Hidden" />
        </Grid>
        <StackPanel Grid.RowSpan="2" Grid.Column="1">
            <Button Click="Button_Click" Content="Test" />
            <Button Click="Button_Click_1" Content="add snippet" />
            <ComboBox x:Name="themeName" />
            <Button
                x:Name="SetThemeButton"
                Click="SetThemeButton_Click"
                Content="Set Theme" />
        </StackPanel>

        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Background="#7fdbca" />
    </Grid>
</Window>
