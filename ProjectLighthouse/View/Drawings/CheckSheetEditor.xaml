<Window
    x:Class="ProjectLighthouse.View.Drawings.CheckSheetEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:quality="clr-namespace:ProjectLighthouse.Model.Quality"
    xmlns:uc="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    Title="Edit Specification"
    Width="1170"
    Height="672"
    MaxWidth="2000"
    MaxHeight="2000"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.ColumnSpan="2"
            Margin="20"
            VerticalAlignment="Center"
            Style="{StaticResource title}"
            Text="Edit Specification" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Text="Master Tolerances"
            Style="{StaticResource section}"/>
        <ListView
            x:Name="MasterToleranceListView"
            Grid.Row="2"
            Grid.Column="0"
            SelectionChanged="MasterToleranceListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:DisplayToleranceDefinition Tolerance="{Binding Path=.}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Center">
            <Button
                x:Name="AddButton"
                IsEnabled="False"
                HorizontalAlignment="Right"
                Click="AddButton_Click"
                Style="{StaticResource ListBox_Add_Button}" />
            <Button
                x:Name="RemoveButton"
                IsEnabled="False"
                HorizontalAlignment="Right"
                Click="RemoveButton_Click"
                Style="{StaticResource ListBox_Remove_Button}" />

        </StackPanel>

        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            Text="Referenced Tolerances"
            Style="{StaticResource section}"/>
        <ListView
            x:Name="ReferencedTolerancesListView"
            Grid.Row="2"
            Grid.Column="2"
            SelectionChanged="ReferencedTolerancesListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:DisplayToleranceDefinition Tolerance="{Binding Path=.}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Text="Inspection Log Preview"
            Style="{StaticResource section}"/>
        <wv2:WebView2
            Name="webView"
            Grid.Row="2"
            Grid.Column="3"
            Source="file:///C:/Users/x.iafrate/Documents/checksheet.pdf#toolbar=0" />
    </Grid>
</Window>
