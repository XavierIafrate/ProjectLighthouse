<UserControl x:Class="ProjectLighthouse.View.QualityCheckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectLighthouse.View"
             xmlns:converters="clr-namespace:ProjectLighthouse.ViewModel.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="717"
             d:Background="White" d:DesignWidth="1354.562">
    <Grid>
        <Grid.Resources>
            <converters:boolToCollapsedOrVisible x:Key="hideIfTrue"/>
            <converters:boolToVisibleOrCollapsed x:Key="showIfTrue"/>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding Checks}" SelectedValue="{Binding SelectedCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Product}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Text="None found" Visibility="{Binding NoCheckFound, Converter={StaticResource showIfTrue}}"/>
        <Grid Grid.Column="1" Width="700" HorizontalAlignment="Center" Margin="10" Visibility="{Binding NoCheckFound, Converter={StaticResource hideIfTrue}}">
            <Border Background="{StaticResource Surface}" CornerRadius="10"/>
            <StackPanel>
                <TextBlock Text="{Binding SelectedCheck.Product}"/>
                <TextBlock Text="{Binding SelectedCheck}"/>
                <TextBlock Text="{Binding SelectedCheck.RaisedBy}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
