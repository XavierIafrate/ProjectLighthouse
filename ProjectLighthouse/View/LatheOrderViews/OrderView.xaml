                                        Fill="{StaticResource OnBlue}"
                                        Stretch="UniformToFill" />
                                    <TextBlock Foreground="{StaticResource OnBlue}" Text="This order is for Research and Development - deliveries will be disabled" />
                                </StackPanel>
                            </Grid>

                            <Border
                                Height="3"
                                Margin="0,10,0,20"
                                Background="{StaticResource DisabledElement}"
                                CornerRadius="1.5" />
