                            <StackPanel>
                                <TextBlock
                                    Margin="0,10,0,5"
                                    Style="{StaticResource section}"
                                    Text="{Binding FilteredOrderItems.Count, StringFormat='{}Items ({0})', FallbackValue='Items (0)'}" />
