                                    <ItemsControl ItemsSource="{Binding FilteredOrderItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <uc:DisplayLMOItems Margin="10,2" LatheManufactureOrderItem="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Rectangle Fill="#01ffffff" />
                                </Grid>

                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Drawings-->
                            <StackPanel>
                                <TextBlock
                                    Margin="0,15,0,5"
                                    Style="{StaticResource section}"
                                    Text="Drawings" />
                                <ItemsControl ItemsSource="{Binding FilteredDrawings}" Visibility="{Binding DrawingsFoundVis}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <uc:DisplayTechnicalDrawing Margin="10,2" Drawing="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="18"
                                    FontStyle="Italic"
                                    Foreground="{StaticResource DisabledElement}"
                                    Text="None found"
                                    Visibility="{Binding NoDrawingsFoundVis}" />
                            </StackPanel>
                            <!--#endregion-->

                            <!--#region Notes-->
                            <TextBlock
                                Margin="0,15,0,5"
                                Style="{StaticResource section}"
                                Text="Notes" />
                            <Grid Visibility="{Binding NoNotes, Converter={StaticResource boolToCollapsed}}">
                                <uc:DisplayListOfNotes Notes="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.FilteredNotes}" />
                                <Rectangle Fill="#01ffffff" />
                            </Grid>
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="18"
                                FontStyle="Italic"
                                Foreground="{StaticResource DisabledElement}"
                                Text="None found"
                                Visibility="{Binding NoNotes, Converter={StaticResource boolToVisible}}" />
                            <!--#endregion-->
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <Grid Height="100">
                    <Image
                        Width="200"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="/Resources/MiB_Logo_Stacked_Colour.jpg" />
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <Border
            x:Name="grad"
            Grid.Column="1"
            CornerRadius="20,0,0,0"
            IsHitTestVisible="False">
            <Border.Background>
                <LinearGradientBrush Opacity="0.08" StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Offset="0" Color="Transparent" />
                    <GradientStop Offset="1" Color="Gray" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <!--#endregion-->

    </Grid>
</UserControl>