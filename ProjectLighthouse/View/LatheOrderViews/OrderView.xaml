                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource OnBackground}"
                                            Text="{Binding SelectedOrder.ModifiedAt, Converter={StaticResource modifiedFormatter}, StringFormat='{}Updated {0}'}" />
                                        <TextBlock
                                            FontSize="13"
                                            FontStyle="Italic"
                                            FontWeight="SemiBold"
                                            Foreground="{StaticResource OnBackground}"
                                            Text="{Binding SelectedOrder.ModifiedBy, StringFormat='{} by {0}'}" />
                                    </StackPanel>
                                </StackPanel>



                                <StackPanel
                                    Grid.Column="2"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <Button
                                        x:Name="printButton"
                                        Grid.Column="3"
                                        Command="{Binding Path=PrintOrderCommand}"
                                        Style="{StaticResource PDFButton}" />
                                    <Button
                                        Command="{Binding EditCommand}"
                                        CommandParameter="{Binding Path=SelectedOrder.Status}"
                                        Style="{StaticResource EditButton}" />
                                </StackPanel>

                            </Grid>

