<UserControl
    x:Class="ProjectLighthouse.View.OrderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:ProjectLighthouse.ViewModel.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:local="clr-namespace:ProjectLighthouse.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:ProjectLighthouse.View.UserControls"
    xmlns:vm="clr-namespace:ProjectLighthouse.ViewModel"
    d:Background="{StaticResource Background}"
    d:DesignHeight="1288"
    d:DesignWidth="1701"
    mc:Ignorable="d">


    <UserControl.Resources>
        <ResourceDictionary>
            <converters:boolToHasProgram x:Key="boolToHasProgram" />
            <converters:boolToIsReady x:Key="boolToIsReady" />
            <converters:intToDays x:Key="intToDays" />
            <converters:DateToSettingDate x:Key="settingTime" />
            <converters:intToStringCycleTime x:Key="intToStringCycleTime" />
            <converters:stringToAssignedLathe x:Key="stringToAssignedLathe" />
            <converters:boolToVisibleOrCollapsed x:Key="boolToVisible" />
            <converters:boolToCollapsedOrVisible x:Key="boolToCollapsed" />
            <converters:StatsToLiveColour x:Key="liveBadgeColour" />
            <converters:dateToLastModified x:Key="modifiedFormatter" />
            <converters:OrderStateToBrush x:Key="stateBrush" />

            <Storyboard x:Key="AnimateFlicker" RepeatBehavior="Forever">
                <DoubleAnimation
                    AutoReverse="True"
                    BeginTime="0:0:1"
                    Storyboard.TargetProperty="Opacity"
                    From="1"
                    To="0"
                    Duration="0:0:01" />
            </Storyboard>

            <Storyboard x:Key="AnimateLighthouse" RepeatBehavior="Forever">
                <DoubleAnimation
                    AutoReverse="True"
                    BeginTime="0:0:1"
                    Storyboard.TargetProperty="Opacity"
                    From="1"
                    To="0"
                    Duration="0:0:01" />
            </Storyboard>

            <Style x:Key="liveCircle" TargetType="Rectangle">
                <Setter Property="Width" Value="16" />
                <Setter Property="Height" Value="16" />
                <Setter Property="Fill" Value="{StaticResource OnRed}" />
                <Setter Property="RadiusX" Value="8" />
                <Setter Property="RadiusY" Value="8" />
                <Setter Property="Margin" Value="15,0,3,0" />
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource AnimateFlicker}" />
                    </EventTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="lighthouse" TargetType="Path">
                <Setter Property="Data" Value="M1,10V2L10,5V7L1,10M8,10V8H13V4H8V3L12,1L16,3V4H15V8H16V10H14.74L8.44,13.64L9,10H8M7,23L7.04,22.76L16.15,17.5L16.67,20.88L13,23H7M8.05,16.17L15.31,12L15.83,15.37L7.43,20.22L8.05,16.17Z" />
                <Setter Property="Width" Value="30" />
                <Setter Property="Fill" Value="{StaticResource OnRed}" />
                <Setter Property="Stretch" Value="Uniform" />
                <Setter Property="Margin" Value="20,0" />
                <Style.Triggers>
                    <EventTrigger RoutedEvent="Loaded">
                        <BeginStoryboard Storyboard="{StaticResource AnimateLighthouse}" />
                    </EventTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="hero" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="SemiBold" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="280" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Button
            HorizontalAlignment="Left"
            Command="{Binding NewOrderCommand}"
            Content="+  New Order" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="SearchBox"
                Style="{StaticResource SearchTextBox}"
                Text="{Binding Path=SearchTerm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                x:Name="ClearButton"
                Grid.Column="1"
                Click="ClearButton_Click"
                Style="{StaticResource ClearButton}" />
        </Grid>

        <ListView
            Grid.Row="2"
            HorizontalContentAlignment="Stretch"
            ItemsSource="{Binding Path=FilteredOrders}"
            SelectedValue="{Binding Path=SelectedOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionChanged="ListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <uc:DisplayLatheManufactureOrder Margin="10,2" LatheManufactureOrder="{Binding}" />
                </DataTemplate>

            </ListView.ItemTemplate>
        </ListView>

        <StatusBar
            Grid.Row="3"
            Margin="10,5"
            HorizontalAlignment="Left"
            Background="Transparent">
            <TextBlock Foreground="{StaticResource OnBackground}" Text="{Binding FilteredOrders.Count, StringFormat='{}{0} order(s)'}" />
            <Separator Margin="5,0" Background="{StaticResource OnBackground}" />
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Foreground="{StaticResource OnBackground}"
                Text="Filter by:" />
            <ComboBox Text="{Binding Path=SelectedFilter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBoxItem Content="All Active" IsSelected="True" />
                <ComboBoxItem Content="Not Ready" />
                <ComboBoxItem Content="No Program" />
                <ComboBoxItem Content="Ready" />
                <ComboBoxItem Content="Complete" />
                <ComboBoxItem Content="All" />
            </ComboBox>
        </StatusBar>

        <!--#region Display Order-->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding NothingVis, UpdateSourceTrigger=PropertyChanged}">
            <Border
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Canvas.Left="55"
                Canvas.Top="30"
                Width="auto"
                Height="auto"
                Margin="0,10"
                VerticalAlignment="Top"
                CornerRadius="18">
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="20"
                        Direction="220"
                        Opacity="0.2"
                        ShadowDepth="20"
                        Color="Black" />
                </Border.Effect>
                <Border Name="ReceiverColor" CornerRadius="15">
                    <Grid Visibility="Hidden">
                        <Border
                            Name="Mask"
                            Background="{StaticResource Blue}"
                            CornerRadius="20" />
                        <StackPanel x:Name="image">
                            <Image
                                Name="Receiver"
                                MaxWidth="400"
                                gif:ImageBehavior.AnimateInDesignMode="True"
                                gif:ImageBehavior.AnimatedSource="pack://application:,,,/Resources/GIF/travolta.gif"
                                gif:ImageBehavior.RepeatBehavior="3"
                                RenderOptions.BitmapScalingMode="HighQuality" />
                            <StackPanel.OpacityMask>
                                <VisualBrush Visual="{Binding ElementName=Mask}" />
                            </StackPanel.OpacityMask>
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="30"
                Foreground="{StaticResource DisabledElement}"
                Text="None found"
                Visibility="Hidden" />
        </StackPanel>
        <ScrollViewer
            x:Name="OrderScroller"
            Grid.RowSpan="4"
            Grid.Column="1"
            ScrollChanged="ScrollViewer_ScrollChanged"
            Visibility="{Binding Path=CardVis, UpdateSourceTrigger=PropertyChanged}">
            <StackPanel>
                <StackPanel Margin="25,10">
                    <Grid MaxWidth="700" Visibility="{Binding Path=LiveInfoVis, UpdateSourceTrigger=PropertyChanged}">
                        <Border
                            d:Background="Black"
                            Background="{Binding DisplayStats, Converter={StaticResource liveBadgeColour}}"
                            CornerRadius="10" />

                        <Grid Margin="25,10,25,11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <Rectangle
                                Grid.RowSpan="2"
                                Margin="0,0,12,0"
                                Style="{StaticResource liveCircle}" />
                            <StackPanel
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource OnRed}"
                                        Opacity="0.7"
                                        Text="LIVE DATA: " />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource OnRed}"
                                        Text="{Binding Path=DisplayStats.MachineName}" />
                                </StackPanel>

                                <TextBlock
                                    Grid.RowSpan="2"
                                    FontSize="12"
                                    FontStyle="Italic"
                                    Foreground="{StaticResource OnRed}"
                                    Text="{Binding Path=DisplayStats.DataTime, StringFormat='{}recorded at {0:HH:mm:ss}'}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <TextBlock
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource OnRed}"
                                    Text="{Binding Path=DisplayStats.PartCountAll, StringFormat='{}{0:#,##0}'}" />
                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    FontWeight="Bold"
                                    Foreground="{StaticResource OnRed}"
                                    Opacity="0.6"
                                    Text="{Binding Path=DisplayStats.PartCountTarget, StringFormat='{}/{0:#,##0} PCS'}" />
                            </StackPanel>

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource OnRed}">
                                <Run Text="Machine is in" />
                                <Run FontWeight="Bold" Text="{Binding Path=DisplayStats.Status}" />
                                <Run Text="state - Cycle time" />
                                <Run FontWeight="Bold" Text="{Binding Path=DisplayStats.CycleTime, Converter='{StaticResource intToStringCycleTime}', StringFormat='{}{0:mm}'}" />
                            </TextBlock>
                        </Grid>
                    </Grid>
