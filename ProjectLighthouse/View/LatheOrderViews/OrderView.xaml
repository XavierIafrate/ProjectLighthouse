                                    Fill="{Binding BarAllocatedIconBrush}"
                                    Stretch="Uniform" />
                                <Border
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="5"
                                    Background="{Binding BarAllocatedIconBrush}"
                                    CornerRadius="2"
                                    Opacity="0.15" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    Margin="5,2,5,4"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="{Binding BarAllocatedIconBrush}"
                                    Text="BAR PREPARED" />
                            </Grid>
