<Window
    x:Class="ProjectLighthouse.View.HelperWindows.EditDeliveryNoteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.HelperWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Edit Delivery Item"
    Width="502.305"
    ResizeMode="NoResize"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid Margin="30">
        <StackPanel>
            <TextBlock Style="{StaticResource title}" Text="Edit Delivery Item" />
            <TextBlock Style="{StaticResource subtitle}" Text="Only do this if you know what you're doing." />
            <TextBox
                x:Name="productText"
                Margin="5,20,5,5"
                Style="{StaticResource DefaultTextBox}"
                Tag="Product Name" />
            <TextBox
                x:Name="poText"
                Style="{StaticResource DefaultTextBox}"
                Tag="Purchase Reference" />
            <Button
                x:Name="SaveButton"
                HorizontalAlignment="Right"
                Content="Save"
                Click="SaveButton_Click"
                Style="{StaticResource GreenButton}" />
        </StackPanel>
    </Grid>
</Window>
