<Window x:Class="ProjectLighthouse.View.EditLotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View"
        Title="Edit Lot" SizeToContent="Height" ResizeMode="NoResize" Width="370"  WindowStartupLocation="CenterOwner" MaxHeight="500">
    <StackPanel Margin="20">
        <TextBlock Text="Edit Lot"/>
        <Separator/>
        <TextBlock Text="Batch"/>
        <TextBox x:Name="BatchTextBox" TextChanged="BatchTextBox_TextChanged" TextWrapping="Wrap"/>
        <TextBlock Text="Quantity"/>
        <TextBox x:Name="QuantityTextBox" PreviewKeyDown="QuantityTextBox_PreviewKeyDown" TextChanged="QuantityTextBox_TextChanged"/>
        <CheckBox x:Name="RejectCheckBox" Content="Lot is Rejects" Margin="10" VerticalContentAlignment="Center" FontSize="16"/>
        <Button Content="Save" x:Name="SaveButton" Style="{StaticResource GreenButton}" HorizontalAlignment="Right" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
