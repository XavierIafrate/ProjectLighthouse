<Window
    x:Class="ProjectLighthouse.View.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Lighthouse Login"
    Width="750"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="280" />
        </Grid.ColumnDefinitions>
        <Border
            Name="ReceiverColor"
            Grid.ColumnSpan="2"
            CornerRadius="20"
            >
            <Grid>
                <Border
                        Name="Mask"
                        Background="{StaticResource Blue}"
                        CornerRadius="20,0,0,20" />
                <Grid x:Name="image">
                    <Image 
                        Name="Receiver"
                        Source="/Resources/StartPoint.png"
                        Stretch="UniformToFill" />
                    <!--<Image 
                        VerticalAlignment="Bottom"
                        Name="Receiver"
                        Source="/Resources/hartland.jpg"
                        Stretch="UniformToFill" >-->
                    <!--</Image>-->
                    <Grid.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{Binding ElementName=Mask}" />
                    </Grid.OpacityMask>
                </Grid>
            </Grid>
        </Border>
        <!--<Rectangle
            Grid.ColumnSpan="2"
            RadiusX="20"
            RadiusY="20">
            <Rectangle.Fill>
                <ImageBrush
                    x:Name="image"
                    AlignmentX="Left"
                    ImageSource="/Resources/StartPoint.png"
                    Stretch="UniformToFill">
                    <ImageBrush.RelativeTransform>
                        <TranslateTransform X="-0.135" />
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>-->
        <Grid Grid.Column="1" Width="300" Grid.ColumnSpan="2">
            <Rectangle
                Fill="{StaticResource Background}"
                RadiusX="20"
                RadiusY="20" />
            <StackPanel
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Image
                    Width="120"
                    Margin="30,20,30,0"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Source="/Resources/Lighthouse_dark.png" />
                <TextBlock
                    x:Name="VersionInfo"
                    Margin="0,5"
                    HorizontalAlignment="Center"
                    FontSize="10"
                    FontStyle="Italic"
                    Foreground="#b1b1b1" />
                <Grid
                    x:Name="MessageBadge"
                    Margin="10,5"
                    Visibility="Hidden">
                    <Rectangle
                        Height="26"
                        Fill="{StaticResource Red}"
                        RadiusX="13"
                        RadiusY="13" />
                    <TextBlock
                        x:Name="message"
                        Padding="15,5,15,7"
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource OnRed}"
                        Text="Username Not Found debug" />
                </Grid>

                <TextBox
                    x:Name="UsernameTextBox"
                    Focusable="True"
                    KeyDown="PasswordText_KeyDown"
                    Style="{StaticResource DefaultTextBox}"
                    Tag="username"/>

                    <Grid Width="250">
                    <PasswordBox
                        Height="40.6"
                        x:Name="PasswordBox"
                        Focusable="True"
                        KeyDown="PasswordText_KeyDown"
                        PasswordChanged="PasswordTextBox_PasswordChanged"
                        Style="{StaticResource PasswordBox}"
                        Tag="password"/>
                    <Grid>
                        <TextBlock
                                x:Name="PasswordGhost"
                                Text="password"
                                Margin="21,10"
                                VerticalAlignment="Center"
                                Style="{StaticResource GhostText}"
                                TextWrapping="Wrap"
                                Visibility="Visible"
                            IsHitTestVisible="False"/>
                    </Grid>
                </Grid>


                <StackPanel Margin="0,20,0,0">
                    <Button
                        Width="100"
                        Click="LoginButton_Click"
                        Content="log in"
                        Style="{StaticResource GreenButton}" />
                    <Button
                        Width="75"
                        Click="ExitButton_Click"
                        Style="{StaticResource ExitButton}" />
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
