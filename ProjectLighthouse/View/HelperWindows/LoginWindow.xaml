        </Border>-->
        <Button
            Margin="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Click="ExitButton_Click"
            Style="{StaticResource ExitButton}" />

        <Border Background="#33000000"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="50" CornerRadius="5">
            
        <TextBlock x:Name="VersionText" Text="v.0.0.0" Margin="10,3" Foreground="White" Opacity="0.6" FontSize="10"/>
        </Border>


        <Grid
            Margin="100,80"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBox
                    x:Name="UsernameTextBox"
                    Width="200"
                    MaxLength="16"
                    Focusable="True"
                    KeyDown="PasswordText_KeyDown"
                    Style="{StaticResource UsernameTextBox}"
                    Tag="username" />

                <Grid>
                    <PasswordBox
                        x:Name="PasswordBox"
                        Width="230"
                        Focusable="True"
                        MaxLength="16"
                        KeyDown="PasswordText_KeyDown"
                        PasswordChanged="PasswordTextBox_PasswordChanged"
                        Style="{StaticResource LoginPasswordBox}"
                        Tag="password" />
                    <Grid>
                        <TextBlock
                            x:Name="PasswordGhost"
                            Margin="21,10"
                            VerticalAlignment="Center"
                            IsHitTestVisible="False"
                            Opacity="0.6"
                            FontSize="20"
                            Foreground="{StaticResource Background}"
                            Text="password"
                            TextWrapping="Wrap"
                            Visibility="Visible" />
                    </Grid>
                </Grid>

                <Button Click="LoginButton_Click" Style="{StaticResource LoginButton}" />
            </StackPanel>
            <Border
                x:Name="MessageBadge"
                Grid.Row="1"
                HorizontalAlignment="Center"
                BorderBrush="{StaticResource Red}"
                BorderThickness="4,0,0,0"
                CornerRadius="3">
                <Grid>
                    <Border
                        Background="{StaticResource Red}"
                        CornerRadius="3"
                        Opacity="0.25" />
                    <TextBlock
                        x:Name="message"
                        Padding="15,2,15,4"
                        HorizontalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Red}"
                        Text="ERROR_MESSAGE_CONTAINER" />
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
