<Window x:Class="ProjectLighthouse.View.LMOContructorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View"
        xmlns:uc="clr-namespace:ProjectLighthouse.View.UserControls"
        xmlns:vm ="clr-namespace:ProjectLighthouse.ViewModel"
        mc:Ignorable="d"
        MinHeight="650" MinWidth="1100"
        WindowStartupLocation="CenterScreen"
        Title="Create New Manufacture Order"
        SizeToContent="WidthAndHeight">

    <Grid DataContext="{Binding}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!--#region Title Bar-->
        <Grid Grid.ColumnSpan="3">
            <StackPanel>
                <TextBlock Text="New Manufacture Order" FontSize="30" Margin="0,10,0,0"/>
                <Separator Margin="0,5,0,10"/>
            </StackPanel>
            <Rectangle Fill="Transparent" MouseDown="Rectangle_MouseDown"/>
        </Grid>
        <!--#endregion-->
        
        <!--#region Pool-->
        <TextBlock Text="Product Pool" FontSize="22" Margin="0,5" Grid.Row="1"/>
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Hidden">
            <ListBox x:Name="poolListBox" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <uc:LMOConstructionDisplayProducts Product="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <!--#endregion-->
        
        <!--#region Buttons-->
        <StackPanel Grid.Row="2" 
                    Grid.Column="1"
                    VerticalAlignment="Center">
            <Button Content=">" 
                    Style="{StaticResource GreenButtonTemplate}" 
                    x:Name="addButton" 
                    Click="addButton_Click"/>
            <Button Content="&lt;" 
                    Style="{StaticResource CancelButtonTemplate}" 
                    x:Name="removeButton" 
                    Click="removeButton_Click"/>

        </StackPanel>
        <!--#endregion-->
        
        <!--#region Insights & Requirements-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.ColumnSpan="2">
            <Grid Margin="0,10">
                <Rectangle Fill="{StaticResource materialPrimaryBlue}" RadiusX="10" RadiusY="10">
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="10" Direction="220" Color="Black" Opacity="0.3"/>
                    </Rectangle.Effect>
                </Rectangle>
                <StackPanel Margin="10">
                    <TextBlock Text="Insights" Foreground="White" FontSize="18"/>
                    <Separator Background="White" Margin="0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Number of bars:" Foreground="White" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"/>
                        <TextBlock Text="50" Foreground="White" Grid.Column="2" Grid.Row="0" x:Name="nBars"/>
                        <TextBlock Text="Material Cost:" Foreground="White" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0"/>
                        <TextBlock Text="£100.00" Foreground="White" Grid.Column="2" Grid.Row="1" x:Name="materialCost"/>
                        <TextBlock Text="Time to required:" Foreground="White" Grid.Column="0" Grid.Row="2" Margin="0,0,10,0"/>
                        <TextBlock Text="1 day(s)" Foreground="White" Grid.Column="2" Grid.Row="2" x:Name="reqTime"/>
                        <TextBlock Text="Time to Complete" Foreground="White" Grid.Column="0" Grid.Row="3" Margin="0,0,10,0"/>
                        <TextBlock Text="5 day(s)" Foreground="White" Grid.Column="2" Grid.Row="3" x:Name="totalTime"/>
                    </Grid>
                </StackPanel>
            </Grid>
            <Grid Margin="10">
                <Rectangle Fill="{StaticResource materialPrimary}" RadiusX="10" RadiusY="10">
                    <Rectangle.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="10" Direction="220" Color="Black" Opacity="0.3"/>
                    </Rectangle.Effect>
                </Rectangle>
                <StackPanel Margin="10">
                    <TextBlock Text="Requirements" Foreground="White" FontSize="18"/>
                    <Separator Background="White" Margin="0,5"/>
                    <TextBlock x:Name="requiredProductTextBlock" Text="P0XXX.123-456-A2" Foreground="White" FontSize="16"/>
                    <TextBlock x:Name="requiredQuantityTextBlock" Text="1000 pcs" Foreground="White" FontSize="16"/>
                    <TextBlock x:Name="requiredDateTextBlock" Text="Delivery required by 01/01/1970" Foreground="White" FontSize="16"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!--#endregion-->
        
        <!--#region New Order-->
        <TextBlock Text="Schedule Items" 
                   FontSize="22" 
                   Margin="0,5"
                   Grid.Column="2"
                   Grid.Row="1"/>
        <ScrollViewer Grid.Row="2" Grid.Column="2" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="LMOItemsListBox" HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <uc:LMOConstructionDisplayLMOItems Item="{Binding}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <!--#endregion-->
        
        <!--#region Confirm/Cancel Buttons-->
        <StackPanel Grid.Row="3"
                    Grid.Column="2"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <TextBox x:Name="updateQty" PreviewKeyDown="updateQty_PreviewKeyDown" Width="100" Height="25" Margin="0,5"/>
            <Button Style="{StaticResource ButtonTemplate}" x:Name="updateButton" Content="Update" Click="updateButton_Click"/>

            <Button Content="Cancel" 
                    x:Name="cancelButton" 
                    Click="cancelButton_Click" 
                    Style="{StaticResource CancelButtonTemplate}"/>
            <Button Content="Confirm" 
                    Width="150" 
                    x:Name="confirmButton" 
                    Click="confirmButton_Click" 
                    Style="{StaticResource GreenButtonTemplate}"/>
        </StackPanel>
        <!--#endregion-->
        
    </Grid>
</Window>
