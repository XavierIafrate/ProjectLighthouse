<Window
    x:Class="ProjectLighthouse.View.HelperWindows.EditProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjectLighthouse.View.HelperWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Modify Product Record"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Text="{Binding Product.ProductName}" />
        <TextBox Text="{Binding Product.MajorDiameter}" />
        <TextBox Text="{Binding Product.MajorLength}" />
        <TextBox Text="{Binding Product.ProductGroup}" />
        <TextBox Text="{Binding Product.Material}" />
        <ComboBox ItemsSource="{Binding BarStock}" Text="{Binding Product.BarID}" />
        <TextBox Text="{Binding Product.ThreadSize}" />
        <TextBox Text="{Binding Product.DriveType}" />
        <TextBox Text="{Binding Product.DriveSize}" />
        <TextBox Text="{Binding Product.CustomerRef}" />
        <CheckBox Content="Bespoke Item" IsChecked="{Binding Product.isSpecialPart}" />
    </StackPanel>
</Window>
