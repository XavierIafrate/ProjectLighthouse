<Window x:Class="ProjectLighthouse.View.CreateNewDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Create New Delivery" Height="450" Width="800">
    <Grid Margin="25,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="New Delivery"
                   Style="{StaticResource heroTextStyle}"/>
        <TextBlock Text="Undelivered Stock Lots"
                   Grid.Row="1"
                   Style="{StaticResource subtitleTextStyle}"/>
        <ScrollViewer Grid.Row="2">
            <ListView x:Name="undeliveredList" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ItemManufactureOrderNumber}"
                                       FontSize="16"
                                       Foreground="{StaticResource materialPrimaryBlue}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding Product}" FontSize="16" Grid.Column="1"/>
                            <TextBlock Text="{Binding QuantityThisDelivery, StringFormat='{}{0} pcs'}" FontSize="16" Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <StackPanel Grid.Column="1"
                    Grid.Row="2" VerticalAlignment="Center">
            <Button Content=">"
                    Style="{StaticResource GreenButtonTemplate}"
                    x:Name="addButton"
                    Click="addButton_Click"/>
            <Button Content="&lt;"
                    Style="{StaticResource CancelButtonTemplate}"
                    x:Name="remButton"
                    Click="remButton_Click"/>
        </StackPanel>

        <TextBlock Text="This Delivery" 
                   Style="{StaticResource subtitleTextStyle}"
                   Grid.Row="1"
                   Grid.Column="2"/>
        <ScrollViewer Grid.Row="2" Grid.Column="2">
            <ListView x:Name="deliveryList" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ItemManufactureOrderNumber}"
                                       FontSize="16"
                                       Foreground="{StaticResource materialPrimaryBlue}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding Product}" FontSize="16" Grid.Column="1"/>
                            <TextBlock Text="{Binding QuantityThisDelivery, StringFormat='{}{0} pcs'}" FontSize="16" Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="3"
                    Grid.Column="2"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource CancelButtonTemplate}"
                    Content="Cancel"
                    x:Name="CancelButton"
                    Click="CancelButton_Click"/>
            <Button Style="{StaticResource GreenButtonTemplate}"
                    Content="Create"
                    x:Name="CreateButton"
                    Click="CreateButton_Click"/>
        </StackPanel>
                    

    </Grid>
</Window>
