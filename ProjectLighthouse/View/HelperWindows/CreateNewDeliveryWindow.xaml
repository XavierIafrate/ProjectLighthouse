<Window x:Class="ProjectLighthouse.View.CreateNewDeliveryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectLighthouse.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Create New Delivery" Height="600" Width="900">
    <Grid Margin="25,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="New Delivery" Style="{StaticResource title}"/>
        <Separator Grid.Row="1" Margin="0,10"/>
        <TextBlock Text="Undelivered Stock Lots"
                   Style="{StaticResource section}"
                   Grid.Row="2"/>
        <ScrollViewer Grid.Row="3">
            <ListView x:Name="undeliveredList" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5" Grid.IsSharedSizeScope="True">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" SharedSizeGroup="A"/>
                                <ColumnDefinition Width="auto" SharedSizeGroup="B"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding ItemManufactureOrderNumber}"
                                       FontSize="16"
                                       Foreground="{StaticResource materialPrimaryBlue}"
                                       FontWeight="Bold"/>
                            
                            <TextBlock Text="{Binding Product}" FontSize="16" Grid.Column="1" FontWeight="Bold" Padding="10,0"/>
                            <TextBlock Text="{Binding QuantityThisDelivery, StringFormat='{}{0} pcs'}" FontSize="16" Grid.Column="3" HorizontalAlignment="Right"/>
                            
                            <TextBlock Text="{Binding }"
                                       FontSize="16"
                                       Foreground="{StaticResource materialPrimaryBlue}"
                                       FontWeight="Bold"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>

        <StackPanel Grid.Column="1"
                    Grid.Row="3" VerticalAlignment="Center">
            <Button Style="{StaticResource GreenButton}"
                    x:Name="addButton"
                    Click="addButton_Click">
                <Button.Content>
                    <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z"
                          Fill="{StaticResource materialOnPrimary}"
                          Margin="0,0,5,0"/>
                </Button.Content>
            </Button>
            <Button
                    Style="{StaticResource CancelButton}"
                    x:Name="remButton"
                    Click="remButton_Click">
                <Button.Content>
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z"
                          Fill="{StaticResource materialOnPrimary}"
                          Margin="0,0,5,0"/>
                </Button.Content>
            </Button>
        </StackPanel>

        <TextBlock Text="This Delivery" 
                   Style="{StaticResource section}"
                   Grid.Row="2"
                   Grid.Column="2"/>
        <ScrollViewer Grid.Row="3" Grid.Column="2">
            <ListView x:Name="deliveryList" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ItemManufactureOrderNumber}"
                                       FontSize="16"
                                       Foreground="{StaticResource materialPrimaryBlue}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding Product}" FontSize="16" Grid.Column="1"/>
                            <TextBlock Text="{Binding QuantityThisDelivery, StringFormat='{}{0} pcs'}" FontSize="16" Grid.Column="3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="4"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Right">
           
            <Button Style="{StaticResource CancelButton}"
                    Content="Cancel"
                    x:Name="CancelButton"
                    Click="CancelButton_Click"/>
            <Button Style="{StaticResource GreenButton}"
                    Content="Create"
                    x:Name="CreateButton"
                    Click="CreateButton_Click"/>
        </StackPanel>
                    

    </Grid>
</Window>
