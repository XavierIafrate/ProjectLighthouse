                            </Border>


                            <TextBlock Text="{Binding FrequencyAnalysis}" />

                        </StackPanel>-->

                        <StackPanel Visibility="{Binding SelectedRequest.IsAccepted, Converter={StaticResource boolToCollapsed}}">
                            <TextBlock Style="{StaticResource section}" Text="Recommended Order" />
                            <TextBlock
                                VerticalAlignment="Center"
                                d:Text="Runtime Cap [X day(s)]"
                                Style="{StaticResource InputLabel}"
                                Text="{Binding TargetRuntime, StringFormat='{}Runtime Cap [{0:N0} day(s)]'}" />
                            <Grid Margin="0,10" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Padding="10,0"
                                    VerticalAlignment="Center"
                                    Text="1" />
                                <Slider
                                    MinWidth="300"
                                    MaxWidth="500"
                                    Grid.Column="1"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    IsSnapToTickEnabled="True"
                                    Maximum="14"
                                    Minimum="1"
                                    TickPlacement="BottomRight"
                                    Value="{Binding TargetRuntime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock
                                    Grid.Column="2"
                                    Padding="10,0"
                                    VerticalAlignment="Center"
                                    Text="14" />

                            </Grid>
                            <Grid>
                                <ListView ItemsSource="{Binding RecommendedManifest}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <uc:DisplayManifestItem Margin="10,2" Item="{Binding}" />
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <Rectangle Fill="#01ffffff" />
                            </Grid>

                            <Grid Margin="5,0">
                                <Button
                                    Margin="0,0,5,0"
                                    HorizontalAlignment="Left"
                                    Command="{Binding ViewMakeOrBuyCommand}"
                                    Style="{StaticResource Action_Button}"
                                    Tag="Order Builder"
                                    Visibility="{Binding DataRequired, Converter={StaticResource boolToCollapsed}}" />
                                <Border HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal">
                                    <Path
                                        Height="14"
                                        Margin="3,1,2,0"
                                        Data="M11 15H6L13 1V9H18L11 23V15Z"
                                        Fill="{StaticResource BlueFaded}"
                                        Stretch="Uniform" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="11"
                                        Foreground="{StaticResource BlueFaded}"
                                        FontWeight="SemiBold"
                                        Text="Lighthouse Requests Engine" />
                                        
                                    </StackPanel>    
                                </Border>
                            </Grid>
                        </StackPanel>

                        <StackPanel Margin="0,10" Visibility="{Binding ApprovalControlsVis}">
                            <TextBlock Style="{StaticResource section}" Text="Approval" />

                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    Style="{StaticResource InputLabel}"
                                    Text="Reason for declining:" />
                                <ComboBox
                                    x:Name="DeclineComboBox"
                                    Width="300"
                                    Margin="0,0,0,5"
                                    Text="{Binding SelectedRequest.DeclinedReason, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                                    <ComboBoxItem Content="Uneconomical" />
                                    <ComboBoxItem Content="No active requirement" />
                                    <ComboBoxItem Content="Cannot deliver on time" />
                                    <ComboBoxItem Content="Machining not possible" />
                                    <ComboBoxItem Content="Duplicate request" />
                                    <ComboBoxItem Content="Merged with active order" />
                                </ComboBox>
                            </StackPanel>

                            <Grid
                                x:Name="approvalControls"
                                Margin="0,20"
                                HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="DeclineButton"
                                    Command="{Binding DeclineCommand}"
                                    Style="{StaticResource DeclineButton}" />
                                <Button
                                    x:Name="ApproveButton"
                                    Grid.Column="1"
                                    Command="{Binding ApproveCommand}"
                                    Style="{StaticResource ApproveButton}" />
                                <Button
                                    x:Name="MergeButton"
                                    Grid.Column="2"
                                    Command="{Binding MergeCommand}"
                                    Style="{StaticResource MergeButton}"
                                    Visibility="{Binding MergeVis}" />
                            </Grid>
                        </StackPanel>
                        <Border
                            Margin="0,10"
                            Background="{StaticResource Background}"
                            BorderBrush="{StaticResource Orange}"
                            BorderThickness="3"
                            CornerRadius="5"
                            Visibility="{Binding DataRequired, Converter={StaticResource boolToVisible}}">
                            <StackPanel Margin="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Path
                                        Width="25"
                                        Margin="0,3,7,0"
                                        Data="M21.54 10.8L13.24 2.5A1.63 1.63 0 0 0 10.84 2.5L2.54 10.8A1.63 1.63 0 0 0 2.54 13.2L10.84 21.5A1.63 1.63 0 0 0 13.24 21.5L21.54 13.2A1.83 1.83 0 0 0 21.54 10.8M13 17H11V15H13M13 13H11V7H13Z"
                                        Fill="{StaticResource OnSurface}"
                                        Stretch="Uniform" />
                                    <TextBlock
                                        Grid.Column="1"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource OnSurface}"
                                        Style="{StaticResource section}"
                                        Text="Data Required" />
                                </Grid>
                                <TextBlock
                                    Margin="10"
                                    Foreground="{StaticResource OnSurface}"
                                    Text="The required data for manufacture is not available for this product. Please review the specifications below and amend the product record."
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="10"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource section}"
                                    Text="Spec Details" />
                                <TextBlock
                                    Margin="20,0"
                                    d:Text="None given"
                                    Text="{Binding SelectedRequestProduct.SpecificationDetails, TargetNullValue='None given'}"
                                    TextWrapping="Wrap" />

                                <TextBlock
                                    Margin="10"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Style="{StaticResource section}"
                                    Text="Spec Document" />
                                <uc:DisplayPdf Margin="20,0" FilePath="{Binding SelectedRequestProduct.SpecificationDocument, TargetNullValue=''}" />

                                <Grid Margin="0,20,0,0" HorizontalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button
                                        Margin="10,0"
                                        Command="{Binding ModifyProductCommand}"
                                        Style="{StaticResource Action_Edit_Button}"
                                        Tag="Edit Product Data" />
                                </Grid>

                            </StackPanel>
                        </Border>

                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Margin="10"
                        Visibility="{Binding EditControlsVis}">
                        <TextBlock
                            Margin="0,5"
                            Style="{StaticResource section}"
                            Text="Edit Request" />
                        <Grid Margin="10">
                            <TextBox
                                x:Name="quantityTextbox"
                                Margin="0"
                                IsEnabled="{Binding CanEditRequirements}"
                                Style="{StaticResource DefaultTextBox}"
                                Tag="quantity required"
                                Text="{Binding SelectedRequest.QuantityRequired, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Grid Margin="10">
                            <DatePicker
                                x:Name="EditDate_DatePicker"
                                DisplayDateStart="{x:Static sys:DateTime.Now}"
                                IsEnabled="{Binding CanEditRequirements}"
                                SelectedDate="{Binding SelectedRequest.DateRequired, Mode=TwoWay}" />
                        </Grid>

                        <Button
                            HorizontalAlignment="Right"
                            Command="{Binding UpdateRequestCmd}"
                            CommandParameter="{Binding SelectedRequest}"
                            Style="{StaticResource Action_Button}"
                            Tag="Update" />
                    </StackPanel>
                    <TextBlock Style="{StaticResource section}" Text="Comments" />

                    <uc:DisplayListOfNotes
                        MinHeight="80"
                        Notes="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.FilteredNotes}"
                        ShowingEditControls="False" />
                    <Grid x:Name="composeMessageControls" Grid.Row="2">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            Style="{StaticResource MessageComposer}"
                            Text="{Binding NewMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextChanged="TextBox_TextChanged"
                            TextWrapping="WrapWithOverflow" />
                        <Button
                            x:Name="SendButton"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Background="Transparent"
                            Command="{Binding SendMessageCommand}"
                            IsEnabled="False"
                            Style="{StaticResource SendButton}" />

                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Border
            x:Name="grad"
            Grid.Column="1"
            Height="20"
            VerticalAlignment="Top"
            CornerRadius="20,0,0,0"
            IsHitTestVisible="False">
            <Border.Background>
                <LinearGradientBrush Opacity="0.08" StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Offset="0" Color="Transparent" />
                    <GradientStop Offset="1" Color="Gray" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
    </Grid>
</UserControl>
